<Window x:Class="POSApp.LoginWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Title="Sign In" Height="450" Width="800"
             ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="#FF191616">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1">
            <TextBlock Text="Its a POS FN!!!!" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="{StaticResource TextBrush}" 
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"
            />
            <TextBox x:Name="UsernameBox"
                     Width="200" 
                     Height="30" 
                     Margin="0,0,0,15" 
                     Padding="8,5"
                     Foreground="{StaticResource SecondaryBrush}"
                     FontSize="14"
                     VerticalContentAlignment="Center"
            />
            <PasswordBox x:Name="PasswordBox" 
                         Width="200" 
                         Height="30" 
                         Margin="0,0,0,20"
                         Padding="8,5"
                         Foreground="{StaticResource SecondaryBrush}"
                         FontSize="14"
                         VerticalContentAlignment="Center"
            />
            <Button Content="Login" 
                    Width="100" 
                    Height="40" 
                    Click="onLoginClick"
                    Background="{StaticResource AccentBrush}"
                    Foreground="{StaticResource TextBrush}"
                    FontSize="16"
                    FontWeight="Bold"
            />
        </StackPanel>
        <Image Source="pack://application:,,,/Assets/alphaWolf.jpg"
       Margin="0"
       Grid.Column="2"
       HorizontalAlignment="Left"
       Width="200"
       Stretch="Uniform"/>

    </Grid>
</Window>
