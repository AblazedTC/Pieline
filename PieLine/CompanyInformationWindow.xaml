<Window x:Class="PieLine.CompanyInformationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PieLine"
        Title="Mom's and Pop's Pizzeria"
        Height="800"
        Width="1024"
        Background="#FFF7EE"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <SolidColorBrush x:Key="AccentRed" Color="#F13300"/>
        <SolidColorBrush x:Key="AccentGold" Color="#D4AF37"/>

        <!-- Icon buttons -->
        <Style x:Key="HeaderIconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Header Icon Buttons (home/info/account/cart) -->
        <Style x:Key="HeaderIconToggleStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="Transparent" Padding="4">
                            <Border x:Name="IconBorder"
                        Width="32" Height="32"
                        Background="Black">
                                <Border.OpacityMask>
                                    <ImageBrush ImageSource="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"/>
                                </Border.OpacityMask>
                            </Border>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="IconBorder"
                            Property="Background"
                            Value="{StaticResource AccentRed}"/>
                            </Trigger>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="IconBorder"
                            Property="Background"
                            Value="{StaticResource AccentGold}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <local:ImagePathConverter x:Key="ImagePathConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="White"
                Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo + Name -->
                <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center">
                    <Border Width="40"
                            Height="40"
                            CornerRadius="4"
                            Margin="0,0,12,0">
                        <Border.Background>
                            <ImageBrush ImageSource="{Binding LogoPath, Converter={StaticResource ImagePathConverter}}"
                                        Stretch="Uniform"/>
                        </Border.Background>
                    </Border>

                    <TextBlock Text="Mom's and Pop's Pizzeria"
                               FontSize="24"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Foreground="#1A1A1A"/>
                </StackPanel>

                <!-- Right Icons -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    <ToggleButton x:Name="InfoButton"
                                  Style="{StaticResource HeaderIconToggleStyle}"
                                  Tag="/Images/info.png"
                                  IsChecked="True"/>
                    <ToggleButton x:Name="HomeButton"
                                  Style="{StaticResource HeaderIconToggleStyle}"
                                  Tag="/Images/home.png"
                                  Click="HomeButton_Click"/>
                    <ToggleButton x:Name="AccountButton"
                                  Style="{StaticResource HeaderIconToggleStyle}"
                                  Tag="/Images/account.png"
                                  Click="AccountButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1"
                Background="Black"
                Height="1"/>

        <!-- Main -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <Grid>
                <!-- Main Box -->
                <Border Background="White"
                CornerRadius="30"
                BorderBrush="#1A1A1A"
                BorderThickness="2"
                Width="800"
                Padding="60,15,60,20"
                Margin="40"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

                    <StackPanel>
                        <!-- Business Name -->
                        <TextBlock Text="Mom's and Pop's Pizzeria"
                           FontSize="48"
                           FontWeight="Bold"
                           Foreground="#1A1A1A"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                        <!-- Address Section -->
                        <StackPanel Margin="0,0,0,30">
                            <TextBlock Text="📍 Address"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#1A1A1A"
                               Margin="0,0,0,5"/>
                            <TextBlock Text="680 Arntson Rd, Suite 161"
                               FontSize="24"
                               Foreground="#555"
                               Margin="20,0,0,0"/>
                            <TextBlock Text="Marietta, GA, 30060"
                               FontSize="24"
                               Foreground="#555"
                               Margin="20,0,0,0"/>
                        </StackPanel>

                        <!-- Phone Section -->
                        <StackPanel Margin="0,0,0,30">
                            <TextBlock Text="📞 Phone Number"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#1A1A1A"
                               Margin="0,0,0,5"/>
                            <TextBlock Text="770-555-1212"
                               FontSize="24"
                               Foreground="#555"
                               Margin="20,0,0,0"/>
                        </StackPanel>

                        <!-- Website Section -->
                        <StackPanel Margin="0,0,0,30">
                            <TextBlock Text="🌐 Website"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#1A1A1A"
                               Margin="0,0,0,5"/>
                            <TextBlock Text="MomAndPopPizzeria.com"
                               FontSize="24"
                               Foreground="#555"
                               Margin="20,0,0,0"/>
                        </StackPanel>

                        <!-- Operating Hours Section -->
                        <StackPanel Margin="0,0,0,0">
                            <TextBlock Text="🕒 Operating Hours"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#1A1A1A"
                               Margin="0,0,0,5"/>
                            <TextBlock Text="Mon - Thur: 9AM - 11PM"
                               FontSize="24"
                               Foreground="#555"
                               Margin="20,0,0,0"/>
                            <TextBlock Text="Fri - Sat: 11AM - 12AM"
                               FontSize="24"
                               Foreground="#555"
                               Margin="20,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>