<Window x:Class="PieLine.CompanyInformationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mom's and Pop's Pizzeria - Company Information"
        Height="768"
        Width="1024"
        Background="#F5E6D3"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="AccentRed"
                Color="#FF4A1E"/>
        <SolidColorBrush x:Key="AccentGold"
                Color="#C5AA00"/>
        <SolidColorBrush x:Key="CardBackground"
                Color="White"/>
        <SolidColorBrush x:Key="HeaderBackground"
                Color="#F5E6D3"/>

        <!-- Top-right icon buttons -->
        <Style x:Key="HeaderIconButtonStyle"
                TargetType="Button">
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="BorderBrush"
                    Value="Transparent"/>
            <Setter Property="Foreground"
                    Value="Black"/>
            <Setter Property="FontSize"
                    Value="16"/>
            <Setter Property="Padding"
                    Value="6"/>
            <Setter Property="Margin"
                    Value="4,0"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
        </Style>

        <!-- Info label style -->
        <Style x:Key="InfoLabelStyle"
                TargetType="TextBlock">
            <Setter Property="FontWeight"
                    Value="Bold"/>
            <Setter Property="FontSize"
                    Value="16"/>
            <Setter Property="Foreground"
                    Value="{StaticResource AccentRed}"/>
            <Setter Property="Margin"
                    Value="0,0,0,4"/>
        </Style>

        <!-- Info value style -->
        <Style x:Key="InfoValueStyle"
                TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="Foreground"
                    Value="#333"/>
            <Setter Property="Margin"
                    Value="0,0,0,20"/>
            <Setter Property="TextWrapping"
                    Value="Wrap"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="1"/>
            <!-- Black separator -->
            <RowDefinition Height="*"/>
            <!-- Content -->
        </Grid.RowDefinitions>

        <!-- ================= HEADER BAR ================= -->
        <Border Grid.Row="0"
                Background="{StaticResource HeaderBackground}"
                Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo + Name -->
                <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center">
                    <Border Width="32"
                            Height="32"
                            Background="{StaticResource AccentRed}"
                            CornerRadius="6"
                            Margin="0,0,10,0">
                        <TextBlock Text="MP"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   Foreground="White"/>
                    </Border>

                    <TextBlock Text="Mom's and Pop's Pizzeria"
                               FontSize="24"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Foreground="#1A1A1A"/>
                </StackPanel>

                <!-- Right icons -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    <Button Style="{StaticResource HeaderIconButtonStyle}">
                        <TextBlock Text="i"
                                Foreground="#FF4A1E"/>
                    </Button>
                    <Button Style="{StaticResource HeaderIconButtonStyle}"
                            Content="Home"
                            Click="HomeButton_Click"/>
                    <Button Style="{StaticResource HeaderIconButtonStyle}"
                            Content="User"/>
                    <Button Style="{StaticResource HeaderIconButtonStyle}"
                            Content="Cart"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Black separator -->
        <Border Grid.Row="1"
                Background="Black"
                Height="1"/>

        <!-- ================= COMPANY INFORMATION CONTENT ================= -->
        <Border Grid.Row="2"
                Margin="20"
                Background="#FBEFE3"
                CornerRadius="16">
            <Viewbox Stretch="Uniform"
                    MaxWidth="800"
                    MaxHeight="600"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                <Grid Width="700"
                        Height="550">
                    <!-- Company Info Card -->
                    <Border Background="{StaticResource CardBackground}"
                            CornerRadius="26"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Padding="50,40"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                        <StackPanel>
                            <!-- Title -->
                            <TextBlock Text="Company Information"
                                       FontSize="32"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource AccentRed}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,30"/>

                            <!-- Business Name -->
                            <TextBlock Style="{StaticResource InfoLabelStyle}"
                                       Text="Business Name"/>
                            <TextBlock Style="{StaticResource InfoValueStyle}"
                                       Text="Mom's and Pop's Pizzeria"/>

                            <!-- Address -->
                            <TextBlock Style="{StaticResource InfoLabelStyle}"
                                       Text="Restaurant Address"/>
                            <TextBlock Style="{StaticResource InfoValueStyle}">
                                <Run Text="680 Arntson Rd, Suite 161"/>
                                <LineBreak/>
                                <Run Text="Marietta, GA 30060"/>
                            </TextBlock>

                            <!-- Phone Number -->
                            <TextBlock Style="{StaticResource InfoLabelStyle}"
                                       Text="Phone Number"/>
                            <TextBlock Style="{StaticResource InfoValueStyle}"
                                       Text="770-555-1212"/>

                            <!-- Website -->
                            <TextBlock Style="{StaticResource InfoLabelStyle}"
                                       Text="Website"/>
                            <TextBlock Style="{StaticResource InfoValueStyle}">
                                <Hyperlink NavigateUri="https://www.momandpoppizzeria.com"
                                           RequestNavigate="Hyperlink_RequestNavigate"
                                           Foreground="{StaticResource AccentRed}">
                                    MomAndPopPizzeria.com
                                </Hyperlink>
                            </TextBlock>

                            <!-- Operating Hours -->
                            <TextBlock Style="{StaticResource InfoLabelStyle}"
                                       Text="Operating Hours"/>
                            <TextBlock Style="{StaticResource InfoValueStyle}">
                                <Run Text="Monday - Thursday: 9:00 AM - 11:00 PM"/>
                                <LineBreak/>
                                <Run Text="Friday - Saturday: 11:00 AM - 12:00 AM"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </Grid>
            </Viewbox>
        </Border>
    </Grid>
</Window>
