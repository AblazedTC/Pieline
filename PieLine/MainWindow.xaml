<Window x:Class="PieLine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PieLine"
        Title="Mom's and Pop's Pizzeria - Main"
        Height="768" Width="1024"
        Background="#FFF5EE"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="AccentRed" Color="#FF4A1E"/>
        <SolidColorBrush x:Key="AccentGold" Color="#C5AA00"/>
        <SolidColorBrush x:Key="CardBackground" Color="White"/>
        <SolidColorBrush x:Key="HeaderBackground" Color="White"/>

        <!-- Top-right icon buttons -->
        <Style x:Key="HeaderIconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Search TextBox (borderless inside rounded box) -->
        <Style x:Key="SearchTextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Card "Add to Cart" button -->
        <Style x:Key="AddToCartButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentRed}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentRed}"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,16,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>

        <!-- Tag / chip style -->
        <Style x:Key="TagChipStyle" TargetType="Border">
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
        </Style>

        <!-- Builder choice buttons (size, sauce, crust, toppings) -->
        <Style x:Key="ChoiceButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="18,8"/>
            <Setter Property="MinWidth" Value="90"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentRed}"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource AccentRed}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <!-- pill-shaped template -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                            CornerRadius="24"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Big rounded white panels in the builder (size / sauce / crust / toppings) -->
        <Style x:Key="BuilderGroupBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="26"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Margin" Value="0,0,0,14"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Selected topping pills in builder summary -->
        <Style x:Key="ToppingPillStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource AccentGold}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="Margin" Value="0,0,6,6"/>
        </Style>

        <local:ImagePathConverter x:Key="ImagePathConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="1"/>
            <!-- Black separator -->
            <RowDefinition Height="Auto"/>
            <!-- Search + Build button -->
            <RowDefinition Height="*"/>
            <!-- Content (cards) -->
        </Grid.RowDefinitions>

        <!-- ================= HEADER BAR ================= -->
        <Border Grid.Row="0"
                Background="{StaticResource HeaderBackground}"
                Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo + Name -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="32" Height="32"
                            Background="{StaticResource AccentRed}"
                            CornerRadius="6"
                            Margin="0,0,10,0">
                        <TextBlock Text="MP"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   Foreground="White"/>
                    </Border>

                    <TextBlock Text="Mom's and Pop's Pizzeria"
                               FontSize="24"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Foreground="#1A1A1A"/>
                </StackPanel>

                <!-- Right icons -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    <Button Style="{StaticResource HeaderIconButtonStyle}" Content="i"/>
                    <Button Style="{StaticResource HeaderIconButtonStyle}">
                        <TextBlock Text="Home" Foreground="#FF4A1E"/>
                    </Button>
                    <Button Style="{StaticResource HeaderIconButtonStyle}" Content="User"/>
                    <Button x:Name="CartButton" Style="{StaticResource HeaderIconButtonStyle}" Content="Cart" Click="CartButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Black separator -->
        <Border Grid.Row="1" Background="Black" Height="1"/>

        <!-- ============== SEARCH + BUILD YOUR OWN ROW ============== -->
        <Grid Grid.Row="2" Margin="20,25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Search bar -->
            <Border Grid.Column="0"
                    Background="#FDFCF9"
                    CornerRadius="20"
                    Padding="10,6"
                    Margin="4,0"
                    BorderBrush="#888"
                    BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Search"
                               VerticalAlignment="Center"/>

                    <TextBox Grid.Column="1"
                             Style="{StaticResource SearchTextBoxStyle}"
                             x:Name="SearchTextBox"
                             Text="Search items"
                             Foreground="#888"
                             GotFocus="SearchTextBox_GotFocus"
                             LostFocus="SearchTextBox_LostFocus"
                             TextChanged="SearchTextBox_TextChanged"/>
                </Grid>
            </Border>

            <!-- Build your own pizza button -->
            <Button Grid.Column="1"
                    Content="Build Your Own Pizza"
                    Margin="16,0,0,0"
                    Padding="24,10"
                    Background="{StaticResource AccentRed}"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderBrush="{StaticResource AccentRed}"
                    Cursor="Hand"
                    HorizontalAlignment="Right"
                    Click="BuildYourOwnPizzaButton_Click"/>
        </Grid>

        <!-- ================= MENU CARDS CONTENT (REPLACED WITH DYNAMIC BINDING) ================= -->
        <Border Grid.Row="3"
                Margin="20,0,20,20"
                CornerRadius="16"
                Background="#FFF5EE">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10">

                    <ItemsControl ItemsSource="{Binding MenuGroups}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,0,0,0">
                                    <TextBlock Text="{Binding Category}"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Margin="6,0"/>
                                    <ItemsControl ItemsSource="{Binding Items}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>

                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="{x:Type local:MenuItem}">
                                                <Border Width="260" Margin="20"
                                                        Background="{StaticResource CardBackground}"
                                                        CornerRadius="20"
                                                        BorderBrush="#E0E0E0"
                                                        BorderThickness="1">
                                                    <StackPanel>
                                                        <Border Height="150"
                                                                CornerRadius="20,20,0,0">

                                                            <Border.Background>
                                                                <ImageBrush ImageSource="{Binding Image, Converter={StaticResource ImagePathConverter}}"
                                                                            Stretch="UniformToFill" />
                                                            </Border.Background>
                                                        </Border>

                                                        <StackPanel Margin="14">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>

                                                                <TextBlock Text="{Binding Name}"
                                                                           FontSize="18"
                                                                           FontWeight="Bold"
                                                                           Grid.Column="0"
                                                                           VerticalAlignment="Center"/>

                                                                <Border Grid.Column="1"
                                                                        Background="{StaticResource AccentGold}"
                                                                        CornerRadius="16"
                                                                        Padding="10,4"
                                                                        Margin="0,0,0,4">
                                                                    <TextBlock Text="{Binding Price, StringFormat=$ {0:0.00}}"
                                                                               FontSize="12"
                                                                               FontWeight="Bold"
                                                                               Foreground="White"/>
                                                                </Border>
                                                            </Grid>

                                                            <TextBlock Text="{Binding Description}"
                                                                       TextWrapping="Wrap"
                                                                       Margin="0,6,0,10"
                                                                       FontSize="12"
                                                                       Foreground="#555"/>

                                                            <ItemsControl ItemsSource="{Binding Tags}">
                                                                <ItemsControl.ItemsPanel>
                                                                    <ItemsPanelTemplate>
                                                                        <StackPanel Orientation="Horizontal"/>
                                                                    </ItemsPanelTemplate>
                                                                </ItemsControl.ItemsPanel>
                                                                <ItemsControl.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <Border Style="{StaticResource TagChipStyle}">
                                                                            <TextBlock Text="{Binding}" FontSize="11"/>
                                                                        </Border>
                                                                    </DataTemplate>
                                                                </ItemsControl.ItemTemplate>
                                                            </ItemsControl>

                                                            <Button Style="{StaticResource AddToCartButtonStyle}"
                                                                    Content="+ Add to Cart"
                                                                    Click="CardAddToCart_Click"
                                                                    DataContext="{Binding}"/>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>

                                    </ItemsControl>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Build overlay and remaining XAML unchanged (kept in original file) -->
        <Grid x:Name="BuildPizzaOverlay"
              Grid.RowSpan="4"
              Background="#80000000"
              Visibility="Collapsed">

            <!-- Main panel -->
            <Border Margin="30"
                    Background="#FBEFE3"
                    CornerRadius="25"
                    Padding="30"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <!-- LEFT: MUCH WIDER -->
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="Auto"/>
                        <!-- RIGHT SUMMARY: MUCH THINNER -->
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>


                    <!-- ===== TITLE BAR ===== -->
                    <Grid Grid.Row="0" Grid.ColumnSpan="3" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Build Your Own Pizza"
                                   FontSize="26"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"/>

                        <Button Grid.Column="1"
                                Content="X"
                                Width="34" Height="34"
                                FontSize="18"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Foreground="Black"
                                Cursor="Hand"
                                Click="BuildPizzaClose_Click"/>
                    </Grid>


                    <!-- ===== LEFT OPTIONS (scrollable) ===== -->
                    <ScrollViewer Grid.Row="1" Grid.Column="0"
                                  VerticalScrollBarVisibility="Auto"
                                  Margin="0,0,25,0">

                        <StackPanel>


                            <!-- ***** SIZE SECTION ***** -->
                            <Border Style="{StaticResource BuilderGroupBorderStyle}"
                                    Padding="22" Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="Choose your Size"
                                               FontWeight="Bold"
                                               FontSize="18"
                                               Margin="0,0,0,14"/>

                                    <!-- Bigger buttons +2×2 layout -->
                                    <UniformGrid Rows="2" Columns="2" Margin="0,6,0,0">

                                        <Button Style="{StaticResource ChoiceButtonStyle}"
                                                Padding="24,12" FontSize="16"
                                                Content="Small" Tag="Small"
                                                Click="BuildPizzaSizeButton_Click"/>

                                        <Button Style="{StaticResource ChoiceButtonStyle}"
                                                Padding="24,12" FontSize="16"
                                                Content="Medium" Tag="Medium"
                                                Click="BuildPizzaSizeButton_Click"/>

                                        <Button Style="{StaticResource ChoiceButtonStyle}"
                                                Padding="24,12" FontSize="16"
                                                Content="Large" Tag="Large"
                                                Click="BuildPizzaSizeButton_Click"/>

                                        <Button Style="{StaticResource ChoiceButtonStyle}"
                                                Padding="24,12" FontSize="16"
                                                Content="Extra Large" Tag="ExtraLarge"
                                                Click="BuildPizzaSizeButton_Click"/>

                                    </UniformGrid>
                                </StackPanel>
                            </Border>

                            <!-- ***** SAUCE + CRUST SIDE BY SIDE ***** -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>


                                <!-- SAUCE -->
                                <Border Style="{StaticResource BuilderGroupBorderStyle}"
                                       Padding="22" Margin="0,0,15,0">
                                    <StackPanel>
                                        <TextBlock Text="Choose your Sauce"
                                                   FontWeight="Bold"
                                                   FontSize="18"
                                                   Margin="0,0,0,14"/>

                                        <WrapPanel>
                                            <Button Style="{StaticResource ChoiceButtonStyle}"
                                                    Padding="22,10" FontSize="16"
                                                    Content="Tomato" Tag="Tomato"
                                                    Click="BuildPizzaSauceButton_Click"/>

                                            <Button Style="{StaticResource ChoiceButtonStyle}"
                                                    Padding="22,10" FontSize="16"
                                                    Content="Marinara" Tag="Marinara"
                                                    Click="BuildPizzaSauceButton_Click"/>

                                            <Button Style="{StaticResource ChoiceButtonStyle}"
                                                    Padding="22,10" FontSize="16"
                                                    Content="Alfredo" Tag="Alfredo"
                                                    Click="BuildPizzaSauceButton_Click"/>
                                        </WrapPanel>
                                    </StackPanel>
                                </Border>

                                <!-- CRUST -->
                                <Border Style="{StaticResource BuilderGroupBorderStyle}"
                                       Padding="22" Grid.Column="1">
                                    <StackPanel>
                                        <TextBlock Text="Choose your Crust"
                                                   FontWeight="Bold"
                                                   FontSize="18"
                                                   Margin="0,0,0,14"/>

                                        <WrapPanel>
                                            <Button Style="{StaticResource ChoiceButtonStyle}"
                                                    Padding="22,10" FontSize="16"
                                                    Content="Thin" Tag="Thin"
                                                    Click="BuildPizzaCrustButton_Click"/>

                                            <Button Style="{StaticResource ChoiceButtonStyle}"
                                                    Padding="22,10" FontSize="16"
                                                    Content="Regular" Tag="Regular"
                                                    Click="BuildPizzaCrustButton_Click"/>

                                            <Button Style="{StaticResource ChoiceButtonStyle}"
                                                    Padding="22,10" FontSize="16"
                                                    Content="Pan" Tag="Pan"
                                                    Click="BuildPizzaCrustButton_Click"/>
                                        </WrapPanel>
                                    </StackPanel>
                                </Border>
                            </Grid>



                            <!-- ***** TOPPINGS ***** -->
                            <Border Style="{StaticResource BuilderGroupBorderStyle}"
                                   Padding="22" Margin="0,0,0,40">

                                <StackPanel>
                                    <TextBlock Text="Choose your Toppings"
                                               FontWeight="Bold"
                                               FontSize="18"
                                               Margin="0,0,0,14"/>

                                    <!-- Veg -->
                                    <TextBlock Text="Veg" FontWeight="SemiBold"
                                               FontSize="16" Margin="0,6,0,4"/>
                                    <WrapPanel>
                                        <Button Style="{StaticResource ChoiceButtonStyle}"
                                                Padding="22,10" FontSize="16"
                                                Content="Cheese" Tag="Cheese"
                                                Click="BuildPizzaToppingButton_Click"/>

                                        <Button Style="{StaticResource ChoiceButtonStyle}"
                                                Padding="22,10" FontSize="16"
                                                Content="Onion" Tag="Onion"
                                                Click="BuildPizzaToppingButton_Click"/>

                                        <Button Style="{StaticResource ChoiceButtonStyle}"
                                                Padding="22,10" FontSize="16"
                                                Content="Pineapple" Tag="Pineapple"
                                                Click="BuildPizzaToppingButton_Click"/>

                                        <Button Style="{StaticResource ChoiceButtonStyle}"
                                                Padding="22,10" FontSize="16"
                                                Content="Jalapeno" Tag="Jalapeno"
                                                Click="BuildPizzaToppingButton_Click"/>

                                        <Button Style="{StaticResource ChoiceButtonStyle}"
                                                Padding="22,10" FontSize="16"
                                                Content="Olives" Tag="Olives"
                                                Click="BuildPizzaToppingButton_Click"/>

                                        <Button Style="{StaticResource ChoiceButtonStyle}"
                                                Padding="22,10" FontSize="16"
                                                Content="Mushroom" Tag="Mushroom"
                                                Click="BuildPizzaToppingButton_Click"/>
                                    </WrapPanel>


                                    <!-- Meat -->
                                    <TextBlock Text="Meat" FontWeight="SemiBold"
                                               FontSize="16" Margin="0,14,0,4"/>
                                    <WrapPanel>
                                        <Button Style="{StaticResource ChoiceButtonStyle}"
                                                Padding="22,10" FontSize="16"
                                                Content="Pepperoni" Tag="Pepperoni"
                                                Click="BuildPizzaToppingButton_Click"/>

                                        <Button Style="{StaticResource ChoiceButtonStyle}"
                                                Padding="22,10" FontSize="16"
                                                Content="Sausage" Tag="Italian sausage"
                                                Click="BuildPizzaToppingButton_Click"/>

                                        <Button Style="{StaticResource ChoiceButtonStyle}"
                                                Padding="22,10" FontSize="16"
                                                Content="Beef" Tag="Beef"
                                                Click="BuildPizzaToppingButton_Click"/>

                                        <Button Style="{StaticResource ChoiceButtonStyle}"
                                                Padding="22,10" FontSize="16"
                                                Content="Chicken" Tag="Chicken"
                                                Click="BuildPizzaToppingButton_Click"/>

                                        <Button Style="{StaticResource ChoiceButtonStyle}"
                                                Padding="22,10" FontSize="16"
                                                Content="Bacon" Tag="Bacon"
                                                Click="BuildPizzaToppingButton_Click"/>
                                    </WrapPanel>
                                </StackPanel>

                            </Border>

                        </StackPanel>
                    </ScrollViewer>




                    <!-- ===== CENTER DIVIDER ===== -->
                    <Border Grid.Row="1" Grid.Column="1"
                           Width="2" Margin="10"
                           Background="#E0C5A8"/>



                    <!-- ===== RIGHT SUMMARY PANEL ===== -->
                    <Border Grid.Row="1" Grid.Column="2"
                            Background="White"
                            CornerRadius="20"
                            Padding="20"
                            Margin="10,0,0,0"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Your Pizza"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Margin="0,0,0,10"/>


                            <StackPanel Grid.Row="1" Margin="0,0,0,10">

                                <Grid Margin="0,0,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Size:" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="BuildPizzaSummarySizeText"
                                               Grid.Column="1" Margin="8,0,0,0"/>
                                </Grid>

                                <Grid Margin="0,0,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Sauce:" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="BuildPizzaSummarySauceText"
                                               Grid.Column="1" Margin="8,0,0,0"/>
                                </Grid>

                                <Grid Margin="0,0,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Crust:" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="BuildPizzaSummaryCrustText"
                                               Grid.Column="1" Margin="8,0,0,0"/>
                                </Grid>

                                <TextBlock Text="Toppings:" FontWeight="SemiBold" Margin="0,12,0,4"/>

                                <WrapPanel x:Name="BuildPizzaSummaryToppingsPanel"/>
                            </StackPanel>


                            <!-- Price row -->
                            <Grid Grid.Row="2" Margin="0,10,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Total" FontWeight="Bold"/>
                                <TextBlock x:Name="BuildPizzaSummaryTotalText"
                                           Grid.Column="1"
                                           FontWeight="Bold"
                                           Margin="10,0,0,0"
                                           Foreground="{StaticResource AccentRed}"/>
                            </Grid>


                            <Button Grid.Row="3"
                                    Content="+ Add to Cart"
                                    Height="50"
                                    FontSize="18"
                                    Background="{StaticResource AccentRed}"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    BorderBrush="{StaticResource AccentRed}"
                                    Cursor="Hand"
                                    Margin="0,6,0,0"
                                    HorizontalAlignment="Stretch"
                                    Click="BuildPizzaAddToCart_Click"/>
                        </Grid>

                    </Border>
                </Grid>

            </Border>
        </Grid>

        <!-- ================= CART SIDEBAR OVERLAY ================= -->
        <Grid x:Name="CartSidebarOverlay" Grid.RowSpan="4" Visibility="Collapsed" IsHitTestVisible="False">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="360"/>
            </Grid.ColumnDefinitions>

            <!-- Clickable dark overlay that closes the cart when clicked (covers full area) -->
            <Border x:Name="CartBackgroundOverlay" Grid.Column="0" Grid.ColumnSpan="2" Background="#80000000" MouseDown="CartOverlayBackground_MouseDown" HorizontalAlignment="Stretch" Opacity="0" Visibility="Collapsed"/>

            <!-- Sidebar panel (starts translated to the right) -->
            <Border Grid.Column="1"
                    Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    Padding="0,35,0,10"
                    x:Name="CartSidebar"
                    HorizontalAlignment="Stretch">
                <Border.RenderTransform>
                    <TranslateTransform x:Name="CartSidebarTransform" X="360" />
                </Border.RenderTransform>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0" Margin="10,0,0,0">
                        <TextBlock Text="Your Cart" FontSize="20" FontWeight="Bold" DockPanel.Dock="Left"/>
                        <Button Content="X" Width="34" Height="34" HorizontalAlignment="Right" DockPanel.Dock="Right" Click="CartCloseButton_Click"/>
                    </DockPanel>

                    <ScrollViewer Grid.Row="1" Margin="10,12,0,12" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding CartItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="8" Margin="0,0,0,10" Background="#FFF7EE" CornerRadius="8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                                <TextBlock Text="{Binding Toppings}" FontSize="12" Foreground="#666" TextWrapping="Wrap"/>
                                            </StackPanel>
                                            <TextBlock Grid.Column="1" Text="{Binding Price, StringFormat=$ {0:0.00}}" VerticalAlignment="Center" Margin="8,0" Foreground="{StaticResource AccentRed}"/>
                                            <Button Grid.Column="2" Content="Remove" Margin="8,0,0,0" Click="CartRemove_Click" DataContext="{Binding}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <StackPanel Grid.Row="2">
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Total" FontWeight="Bold" Padding="10,0,0,0"/>
                            <TextBlock x:Name="CartTotalText" Padding="0,0,0,0" Grid.Column="1" FontWeight="Bold" Foreground="{StaticResource AccentRed}"/>
                        </Grid>

                        <Button x:Name="CheckoutButton"
                                Click="CheckoutButton_Click"
                                Content="Checkout"
                                Background="{StaticResource AccentGold}"
                                Foreground="White"
                                Height="44"
                                FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

    </Grid>
</Window>