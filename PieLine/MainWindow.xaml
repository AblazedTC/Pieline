<Window x:Class="PieLine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PieLine"
        Title="Mom's and Pop's Pizzeria - Main"
        Height="768" Width="1024"
        Background="#F5E6D3"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="AccentRed" Color="#FF4A1E"/>
        <SolidColorBrush x:Key="AccentGold" Color="#C5AA00"/>
        <SolidColorBrush x:Key="CardBackground" Color="White"/>
        <SolidColorBrush x:Key="HeaderBackground" Color="#F5E6D3"/>

        <!-- Top-right icon buttons -->
        <Style x:Key="HeaderIconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Search TextBox (borderless inside rounded box) -->
        <Style x:Key="SearchTextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Card "Add to Cart" button -->
        <Style x:Key="AddToCartButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentRed}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentRed}"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,16,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>

        <!-- Tag / chip style -->
        <Style x:Key="TagChipStyle" TargetType="Border">
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
        </Style>

        <!-- Builder choice buttons (size, sauce, crust, toppings) -->
        <Style x:Key="ChoiceButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="18,8"/>
            <Setter Property="MinWidth" Value="90"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentRed}"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource AccentRed}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <!-- pill-shaped template -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                            CornerRadius="24"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Big rounded white panels in the builder (size / sauce / crust / toppings) -->
        <Style x:Key="BuilderGroupBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="26"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Margin" Value="0,0,0,14"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Selected topping pills in builder summary -->
        <Style x:Key="ToppingPillStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource AccentGold}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="Margin" Value="0,0,6,6"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="1"/>
            <!-- Black separator -->
            <RowDefinition Height="Auto"/>
            <!-- Search + Build button -->
            <RowDefinition Height="*"/>
            <!-- Content (cards) -->
        </Grid.RowDefinitions>

        <!-- ================= HEADER BAR ================= -->
        <Border Grid.Row="0"
                Background="{StaticResource HeaderBackground}"
                Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo + Name -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="32" Height="32"
                            Background="{StaticResource AccentRed}"
                            CornerRadius="6"
                            Margin="0,0,10,0">
                        <TextBlock Text="MP"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   Foreground="White"/>
                    </Border>

                    <TextBlock Text="Mom's and Pop's Pizzeria"
                               FontSize="24"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Foreground="#1A1A1A"/>
                </StackPanel>

                <!-- Right icons -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    <Button Style="{StaticResource HeaderIconButtonStyle}" Content="i"/>
                    <Button Style="{StaticResource HeaderIconButtonStyle}">
                        <TextBlock Text="Home" Foreground="#FF4A1E"/>
                    </Button>
                    <Button Style="{StaticResource HeaderIconButtonStyle}" Content="User"/>
                    <Button Style="{StaticResource HeaderIconButtonStyle}" Content="Cart"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Black separator -->
        <Border Grid.Row="1" Background="Black" Height="1"/>

        <!-- ============== SEARCH + BUILD YOUR OWN ROW ============== -->
        <Grid Grid.Row="2" Margin="20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Search bar -->
            <Border Grid.Column="0"
                    Background="White"
                    CornerRadius="20"
                    Padding="10,6"
                    BorderBrush="#DDDDDD"
                    BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Search"
                               VerticalAlignment="Center"
                               Margin="4,0"/>

                    <TextBox Grid.Column="1"
                             Style="{StaticResource SearchTextBoxStyle}"
                             x:Name="SearchTextBox"
                             Text="Search items"
                             Foreground="#888"
                             GotFocus="SearchTextBox_GotFocus"
                             LostFocus="SearchTextBox_LostFocus"
                             TextChanged="SearchTextBox_TextChanged"/>
                </Grid>
            </Border>

            <!-- Build your own pizza button -->
            <Button Grid.Column="1"
                    Content="Build Your Own Pizza"
                    Margin="16,0,0,0"
                    Padding="24,10"
                    Background="{StaticResource AccentRed}"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderBrush="{StaticResource AccentRed}"
                    Cursor="Hand"
                    HorizontalAlignment="Right"
                    Click="BuildYourOwnPizzaButton_Click"/>
        </Grid>

        <!-- ================= MENU CARDS CONTENT (REPLACED WITH DYNAMIC BINDING) ================= -->
        <Border Grid.Row="3"
                Margin="20,20,20,20"
                CornerRadius="16"
                Background="#FBEFE3">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10">

                    <ItemsControl ItemsSource="{Binding MenuGroups}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="{Binding Category}"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Margin="6,0"/>
                                    <ItemsControl ItemsSource="{Binding Items}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>

                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="{x:Type local:FoodItem}">
                                                <Border Width="260" Margin="10"
                                                        Background="{StaticResource CardBackground}"
                                                        CornerRadius="20"
                                                        BorderBrush="#E0E0E0"
                                                        BorderThickness="1">
                                                    <StackPanel>
                                                        <Border Height="150"
                                                                CornerRadius="20,20,0,0"
                                                                Background="#DDDDDD">
                                                            <TextBlock Text="{Binding ImagePath, FallbackValue='Image'}"
                                                                       HorizontalAlignment="Center"
                                                                       VerticalAlignment="Center"
                                                                       Foreground="#777"/>
                                                        </Border>

                                                        <StackPanel Margin="14">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>

                                                                <TextBlock Text="{Binding Name}"
                                                                           FontSize="18"
                                                                           FontWeight="Bold"
                                                                           Grid.Column="0"
                                                                           VerticalAlignment="Center"/>

                                                                <Border Grid.Column="1"
                                                                        Background="{StaticResource AccentGold}"
                                                                        CornerRadius="16"
                                                                        Padding="10,4"
                                                                        Margin="0,0,0,4">
                                                                    <TextBlock Text="{Binding Price, StringFormat=$ {0:0.00}}"
                                                                               FontSize="12"
                                                                               FontWeight="Bold"
                                                                               Foreground="White"/>
                                                                </Border>
                                                            </Grid>

                                                            <TextBlock Text="{Binding Description}"
                                                                       TextWrapping="Wrap"
                                                                       Margin="0,6,0,10"
                                                                       FontSize="12"
                                                                       Foreground="#555"/>

                                                            <ItemsControl ItemsSource="{Binding Tags}">
                                                                <ItemsControl.ItemsPanel>
                                                                    <ItemsPanelTemplate>
                                                                        <StackPanel Orientation="Horizontal"/>
                                                                    </ItemsPanelTemplate>
                                                                </ItemsControl.ItemsPanel>
                                                                <ItemsControl.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <Border Style="{StaticResource TagChipStyle}">
                                                                            <TextBlock Text="{Binding}" FontSize="11"/>
                                                                        </Border>
                                                                    </DataTemplate>
                                                                </ItemsControl.ItemTemplate>
                                                            </ItemsControl>

                                                            <Button Style="{StaticResource AddToCartButtonStyle}"
                                                                    Content="+ Add to Cart"
                                                                    Click="CardAddToCart_Click"
                                                                    DataContext="{Binding}"/>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>

                                    </ItemsControl>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Build overlay and remaining XAML unchanged (kept in original file) -->
        <!-- ... -->
    </Grid>
</Window>
