<Window x:Class="PieLine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PieLine"
        Title="Mom's and Pop's Pizzeria"
        Height="800" Width="1024"
        Background="#FFF7EE"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="AccentRed" Color="#F13300"/>
        <SolidColorBrush x:Key="AccentGold" Color="#D4AF37"/>
        <SolidColorBrush x:Key="CardBackground" Color="White"/>
        <SolidColorBrush x:Key="HeaderBackground" Color="White"/>

        <!-- Top-right icon buttons -->
        <Style x:Key="HeaderIconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Search TextBox (borderless inside rounded box) -->
        <Style x:Key="SearchTextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Card "Add to Cart" button -->
        <Style x:Key="AddToCartButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentRed}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentRed}"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,16,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Tag / chip style -->
        <Style x:Key="TagChipStyle" TargetType="Border">
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
        </Style>

        <!-- Builder choice buttons (size, sauce, crust, toppings) -->
        <Style x:Key="ChoiceButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="18,8"/>
            <Setter Property="Width" Value="195"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentRed}"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <!-- pill-shaped template -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                            CornerRadius="24"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Big rounded white panels in the builder (size / sauce / crust / toppings) -->
        <Style x:Key="BuilderGroupBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="26"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Margin" Value="0,0,0,14"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Selected topping pills in builder summary -->
        <Style x:Key="ToppingPillStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource AccentGold}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="Margin" Value="0,0,6,6"/>
        </Style>

        <!-- Cart quantity +/- buttons -->
        <Style x:Key="CartQuantityButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#1A1A1A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <local:ImagePathConverter x:Key="ImagePathConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="1"/>
            <!-- Black separator -->
            <RowDefinition Height="Auto"/>
            <!-- Search + Build button -->
            <RowDefinition Height="*"/>
            <!-- Content (cards) -->
        </Grid.RowDefinitions>

        <!-- ================= HEADER BAR ================= -->
        <Border Grid.Row="0"
                Background="{StaticResource HeaderBackground}"
                Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo + Name -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="40" Height="40" CornerRadius="4" Margin="0,0,12,0">
                        <Border.Background>
                            <ImageBrush ImageSource="{Binding LogoPath, Converter={StaticResource ImagePathConverter}}"
                                        Stretch="Uniform" />
                        </Border.Background>
                    </Border>

                    <TextBlock Text="Mom's and Pop's Pizzeria"
                               FontSize="24"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Foreground="#1A1A1A"/>
                </StackPanel>

                <!-- Right icons -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    <Button Style="{StaticResource HeaderIconButtonStyle}" Content="i" Click="InfoButton_Click"/>
                    <Button Style="{StaticResource HeaderIconButtonStyle}">
                        <TextBlock Text="Home" Foreground="#F13300"/>
                    </Button>
                    <Button Style="{StaticResource HeaderIconButtonStyle}" Content="User"/>
                    <Button x:Name="CartButton" Style="{StaticResource HeaderIconButtonStyle}" Content="Cart" Click="CartButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Black separator -->
        <Border Grid.Row="1" Background="Black" Height="1"/>

        <!-- ============== SEARCH + BUILD YOUR OWN ROW ============== -->
        <Grid Grid.Row="2" Margin="20,25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Search bar -->
            <Border Grid.Column="0"
                    Background="#FDFCF9"
                    CornerRadius="20"
                    Padding="10,6"
                    Margin="4,0"
                    BorderBrush="#888"
                    BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Search"
                               VerticalAlignment="Center"/>

                    <TextBox Grid.Column="1"
                             Style="{StaticResource SearchTextBoxStyle}"
                             x:Name="SearchTextBox"
                             Text="Search items"
                             Foreground="#888"
                             GotFocus="SearchTextBox_GotFocus"
                             LostFocus="SearchTextBox_LostFocus"
                             TextChanged="SearchTextBox_TextChanged"/>
                </Grid>
            </Border>

            <!-- Build your own pizza button -->
            <Button Style="{StaticResource AddToCartButtonStyle}"
                    Grid.Column="1"
                    Content="Build Your Own Pizza"
                    Margin="16,0,0,0"
                    Padding="24,10"
                    Background="{StaticResource AccentRed}"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderBrush="{StaticResource AccentRed}"
                    Cursor="Hand"
                    HorizontalAlignment="Right"
                    Click="BuildYourOwnPizzaButton_Click"/>
        </Grid>

        <!-- ================= MENU CARDS CONTENT (REPLACED WITH DYNAMIC BINDING) ================= -->
        <Border Grid.Row="3"
                Margin="20,0,20,20"
                CornerRadius="16"
                Background="#FFF5EE">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10">

                    <ItemsControl ItemsSource="{Binding MenuGroups}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,0,0,0">
                                    <TextBlock Text="{Binding Category}"
                                               FontSize="24"
                                               FontWeight="Bold"
                                               Margin="6,0"/>
                                    <ItemsControl ItemsSource="{Binding Items}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>

                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="{x:Type local:MenuItem}">
                                                <Border Width="260" Margin="34,18,0,22"
                                                        Background="{StaticResource CardBackground}"
                                                        CornerRadius="20"
                                                        BorderBrush="#E0E0E0"
                                                        BorderThickness="1">
                                                    <StackPanel>
                                                        <Border Height="150"
                                                                CornerRadius="20,20,0,0">

                                                            <Border.Background>
                                                                <ImageBrush ImageSource="{Binding Image, Converter={StaticResource ImagePathConverter}}"
                                                                            Stretch="UniformToFill" />
                                                            </Border.Background>
                                                        </Border>

                                                        <StackPanel Margin="14">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>

                                                                <TextBlock Text="{Binding Name}"
                                                                           FontSize="18"
                                                                           FontWeight="Bold"
                                                                           Grid.Column="0"
                                                                           VerticalAlignment="Center"/>

                                                                <Border Grid.Column="1"
                                                                        Background="{StaticResource AccentGold}"
                                                                        CornerRadius="16"
                                                                        Padding="10,4"
                                                                        Margin="0,0,0,4">
                                                                    <TextBlock Text="{Binding Price, StringFormat=$ {0:0.00}}"
                                                                               FontSize="12"
                                                                               FontWeight="Bold"
                                                                               Foreground="Black"/>
                                                                </Border>
                                                            </Grid>

                                                            <TextBlock Text="{Binding Description}"
                                                                       TextWrapping="Wrap"
                                                                       Margin="0,6,0,10"
                                                                       FontSize="12"
                                                                       Foreground="#555"/>

                                                            <ItemsControl ItemsSource="{Binding Tags}">
                                                                <ItemsControl.ItemsPanel>
                                                                    <ItemsPanelTemplate>
                                                                        <StackPanel Orientation="Horizontal"/>
                                                                    </ItemsPanelTemplate>
                                                                </ItemsControl.ItemsPanel>
                                                                <ItemsControl.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <Border Style="{StaticResource TagChipStyle}">
                                                                            <TextBlock Text="{Binding}" FontSize="11"/>
                                                                        </Border>
                                                                    </DataTemplate>
                                                                </ItemsControl.ItemTemplate>
                                                            </ItemsControl>

                                                            <Button Style="{StaticResource AddToCartButtonStyle}"
                                                                    Content="+ Add to Cart"
                                                                    Click="CardAddToCart_Click"
                                                                    DataContext="{Binding}"/>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>

                                    </ItemsControl>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Build overlay and remaining XAML unchanged (kept in original file) -->
        <Grid x:Name="BuildPizzaOverlay"
              Grid.RowSpan="4"
              Background="#80000000"
              Visibility="Collapsed">

            <!-- Main panel -->
            <Border Margin="30"
                    Background="#FFF7EE"
                    CornerRadius="25"
                    Padding="30"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <!-- LEFT: MUCH WIDER -->
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="Auto"/>
                        <!-- RIGHT SUMMARY: MUCH THINNER -->
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>


                    <!-- ===== TITLE BAR ===== -->
                    <Grid Grid.Row="0" Grid.ColumnSpan="3" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Build Your Own Pizza"
                                   FontSize="26"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"/>

                        <Button Grid.Column="1"
                                Content="X"
                                Width="34" Height="34"
                                FontSize="18"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Foreground="Black"
                                Cursor="Hand"
                                Click="BuildPizzaClose_Click"/>
                    </Grid>


                    <!-- ===== LEFT OPTIONS (scrollable) ===== -->
                    <ScrollViewer Grid.Row="1" Grid.Column="0"
                                  VerticalScrollBarVisibility="Auto"
                                  Margin="0,0,25,0">

                        <StackPanel>


                            <!-- ***** SIZE SECTION ***** -->
                            <Border Style="{StaticResource BuilderGroupBorderStyle}"
                                    Padding="22" Margin="0,0,25,20"
                                    BorderBrush="#1A1A1A"
                                    BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Choose your Size"
                                               FontWeight="Bold"
                                               FontSize="18"
                                               Margin="0,0,0,14"/>

                                    <!-- Buttons -->
                                    <UniformGrid Rows="2" Columns="2" Margin="0,6,0,0" x:Name="BuildPizzaSizeButtonsPanel">

                                        <Button Style="{StaticResource ChoiceButtonStyle}"
                                                    Padding="24,12" FontSize="16"
                                                    Content="Small" Tag="Small"
                                                    Click="BuildPizzaSizeButton_Click"/>

                                        <Button Style="{StaticResource ChoiceButtonStyle}"
                                                    Padding="24,12" FontSize="16"
                                                    Content="Medium" Tag="Medium"
                                                    Click="BuildPizzaSizeButton_Click"/>

                                        <Button Style="{StaticResource ChoiceButtonStyle}"
                                                    Padding="24,12" FontSize="16"
                                                    Content="Large" Tag="Large"
                                                    Click="BuildPizzaSizeButton_Click"/>

                                        <Button Style="{StaticResource ChoiceButtonStyle}"
                                                    Padding="24,12" FontSize="16"
                                                    Content="Extra Large" Tag="Extra Large"
                                                    Click="BuildPizzaSizeButton_Click"/>

                                    </UniformGrid>
                                </StackPanel>
                            </Border>

                            <!-- ***** SAUCE + CRUST SIDE BY SIDE ***** -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>


                                <!-- SAUCE -->
                                <Border Style="{StaticResource BuilderGroupBorderStyle}"
                                        Padding="22" Margin="0,0,25,0"
                                        BorderBrush="#1A1A1A"
                                        BorderThickness="1"
                                        VerticalAlignment="Center"
                                        Height="Auto">
                                    <StackPanel>
                                        <TextBlock Text="Choose your Sauce"
                                                   FontWeight="Bold"
                                                   FontSize="18"
                                                   Margin="0,0,0,14"/>

                                        <WrapPanel HorizontalAlignment="Center">
                                            <StackPanel x:Name="BuildPizzaSauceButtonsPanel">
                                                <Button Style="{StaticResource ChoiceButtonStyle}"
                                                        Padding="22,10" FontSize="16"
                                                        Content="Tomato" Tag="Tomato"
                                                        Click="BuildPizzaSauceButton_Click"/>
                                                
                                                <Button Style="{StaticResource ChoiceButtonStyle}"
                                                        Padding="22,10" FontSize="16"
                                                        Content="Marinara" Tag="Marinara"
                                                        Click="BuildPizzaSauceButton_Click"/>
                                                
                                                <Button Style="{StaticResource ChoiceButtonStyle}"
                                                        Padding="22,10" FontSize="16"
                                                        Content="Alfredo" Tag="Alfredo"
                                                        Click="BuildPizzaSauceButton_Click"/>
                                            </StackPanel>
                                        </WrapPanel>
                                    </StackPanel>
                                </Border>

                                <!-- CRUST -->
                                <Border Style="{StaticResource BuilderGroupBorderStyle}"
                                        Padding="22" Grid.Column="1" Margin="0,0,25,0"
                                        BorderBrush="#1A1A1A"
                                        BorderThickness="1"
                                        VerticalAlignment="Center"
                                        Height="Auto">
                                    <StackPanel>
                                        <TextBlock Text="Choose your Crust"
                                                   FontWeight="Bold"
                                                   FontSize="18"
                                                   Margin="0,0,0,14"/>

                                        <WrapPanel HorizontalAlignment="Center">
                                            <StackPanel x:Name="BuildPizzaCrustButtonsPanel">
                                                <Button Style="{StaticResource ChoiceButtonStyle}"
                                                        Padding="22,10" FontSize="16"
                                                        Content="Thin" Tag="Thin"
                                                        Click="BuildPizzaCrustButton_Click"/>

                                                <Button Style="{StaticResource ChoiceButtonStyle}"
                                                        Padding="22,10" FontSize="16"
                                                        Content="Regular" Tag="Regular"
                                                        Click="BuildPizzaCrustButton_Click"/>

                                                <Button Style="{StaticResource ChoiceButtonStyle}"
                                                        Padding="22,10" FontSize="16"
                                                        Content="Pan" Tag="Pan"
                                                        Click="BuildPizzaCrustButton_Click"/>
                                            </StackPanel>
                                        </WrapPanel>
                                    </StackPanel>
                                </Border>
                            </Grid>



                            <!-- ***** TOPPINGS ***** -->
                            <Border Style="{StaticResource BuilderGroupBorderStyle}"
                                   Padding="22" Margin="0,0,25,40"
                                    BorderBrush="#1A1A1A"
                                    BorderThickness="1">

                                <StackPanel>
                                    <TextBlock Text="Choose your Toppings"
                                               FontWeight="Bold"
                                               FontSize="18"
                                               Margin="0,0,0,14"/>

                                    <!-- Veg -->
                                    <TextBlock Text="Vegetables" FontWeight="SemiBold"
                                               FontSize="16" Margin="0,6,0,4"/>
                                    <WrapPanel x:Name="VegToppingsButtonsPanel" HorizontalAlignment="Center">
                                        <Button Style="{StaticResource ChoiceButtonStyle}"
                                                Padding="22,10" FontSize="16"
                                                Content="Cheese" Tag="Cheese"
                                                Click="BuildPizzaToppingButton_Click"/>

                                        <Button Style="{StaticResource ChoiceButtonStyle}"
                                                Padding="22,10" FontSize="16"
                                                Content="Onion" Tag="Onion"
                                                Click="BuildPizzaToppingButton_Click"/>

                                        <Button Style="{StaticResource ChoiceButtonStyle}"
                                                Padding="22,10" FontSize="16"
                                                Content="Pineapple" Tag="Pineapple"
                                                Click="BuildPizzaToppingButton_Click"/>

                                        <Button Style="{StaticResource ChoiceButtonStyle}"
                                                Padding="22,10" FontSize="16"
                                                Content="Jalapeno" Tag="Jalapeno"
                                                Click="BuildPizzaToppingButton_Click"/>

                                        <Button Style="{StaticResource ChoiceButtonStyle}"
                                                Padding="22,10" FontSize="16"
                                                Content="Olives" Tag="Olives"
                                                Click="BuildPizzaToppingButton_Click"/>

                                        <Button Style="{StaticResource ChoiceButtonStyle}"
                                                Padding="22,10" FontSize="16"
                                                Content="Mushroom" Tag="Mushroom"
                                                Click="BuildPizzaToppingButton_Click"/>
                                    </WrapPanel>


                                    <!-- Meat -->
                                    <TextBlock Text="Meat" FontWeight="SemiBold"
                                               FontSize="16" Margin="0,14,0,4"/>
                                    <WrapPanel x:Name="MeatToppingsButtonsPanel" HorizontalAlignment="Center">
                                        <Button Style="{StaticResource ChoiceButtonStyle}"
                                                Padding="22,10" FontSize="16"
                                                Content="Pepperoni" Tag="Pepperoni"
                                                Click="BuildPizzaToppingButton_Click"/>

                                        <Button Style="{StaticResource ChoiceButtonStyle}"
                                                Padding="22,10" FontSize="16"
                                                Content="Sausage" Tag="Italian sausage"
                                                Click="BuildPizzaToppingButton_Click"/>

                                        <Button Style="{StaticResource ChoiceButtonStyle}"
                                                Padding="22,10" FontSize="16"
                                                Content="Beef" Tag="Beef"
                                                Click="BuildPizzaToppingButton_Click"/>

                                        <Button Style="{StaticResource ChoiceButtonStyle}"
                                                Padding="22,10" FontSize="16"
                                                Content="Chicken" Tag="Chicken"
                                                Click="BuildPizzaToppingButton_Click"/>

                                        <Button Style="{StaticResource ChoiceButtonStyle}"
                                                Padding="22,10" FontSize="16"
                                                Content="Bacon" Tag="Bacon"
                                                Click="BuildPizzaToppingButton_Click"/>
                                    </WrapPanel>
                                </StackPanel>

                            </Border>

                        </StackPanel>
                    </ScrollViewer>


                    <!-- ===== RIGHT SUMMARY PANEL ===== -->
                    <Border Grid.Row="1" Grid.Column="2"
                            Background="White"
                            CornerRadius="20"
                            Padding="20"
                            Margin="10,0,0,0"
                            BorderBrush="#1A1A1A"
                            BorderThickness="1">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Your Pizza"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Margin="0,0,0,10"/>


                            <StackPanel Grid.Row="1" Margin="0,0,0,10">

                                <Grid Margin="0,0,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Size:" FontSize="16" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="BuildPizzaSummarySizeText"
                                               FontSize="16" Grid.Column="1" Margin="8,0,0,0"/>
                                </Grid>

                                <Grid Margin="0,0,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Sauce:" FontSize="16" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="BuildPizzaSummarySauceText"
                                               FontSize="16" Grid.Column="1" Margin="8,0,0,0"/>
                                </Grid>

                                <Grid Margin="0,0,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Crust:" FontSize="16" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="BuildPizzaSummaryCrustText"
                                               FontSize="16" Grid.Column="1" Margin="8,0,0,0"/>
                                </Grid>

                                <Separator Grid.Row="2" Margin="-20,10,-20,0"/>

                                <TextBlock Text="Toppings:" FontSize="16" FontWeight="SemiBold" Margin="0,12,0,8"/>

                                <WrapPanel x:Name="BuildPizzaSummaryToppingsPanel"/>
                            </StackPanel>

                            <Separator Grid.Row="2" Margin="-20,-40,-20,0"/>

                            <!-- Price row -->
                            <Grid Grid.Row="2" Margin="0,10,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Total" FontSize="16" FontWeight="Bold"/>
                                <TextBlock x:Name="BuildPizzaSummaryTotalText"
                                           Grid.Column="1"
                                           FontWeight="Bold"
                                           FontSize="16"
                                           Margin="10,0,0,0"
                                           Foreground="{StaticResource AccentRed}"/>
                            </Grid>


                            <Button x:Name="BuildPizzaAddToCartButton"
                                    Grid.Row="3" 
                                    Style="{StaticResource AddToCartButtonStyle}"
                                    Content="+ Add to Cart"
                                    Height="50"
                                    FontSize="18"
                                    Background="{StaticResource AccentRed}"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    BorderBrush="{StaticResource AccentRed}"
                                    Cursor="Hand"
                                    Margin="0,6,0,0"
                                    HorizontalAlignment="Stretch"
                                    IsEnabled="False"
                                    Click="BuildPizzaAddToCart_Click"/>
                        </Grid>

                    </Border>
                </Grid>

            </Border>
        </Grid>

        <!-- ================= CART SIDEBAR OVERLAY ================= -->
        <!-- CART SIDEBAR OVERLAY -->
        <Grid x:Name="CartSidebarOverlay"
                Grid.RowSpan="4"
                Visibility="Collapsed"
                IsHitTestVisible="False">
            <!-- dim background -->
            <Border x:Name="CartBackgroundOverlay"
                    Background="#99000000"
                    Opacity="0"
                    MouseDown="CartOverlayBackground_MouseDown"/>

            <!-- slide-in panel -->
            <Grid HorizontalAlignment="Right"
                  Width="360">
                <Grid.RenderTransform>
                    <TranslateTransform x:Name="CartSidebarTransform"
                                X="360" />
                </Grid.RenderTransform>

                <Border Background="#FFF7EE"
                        BorderBrush="#1A1A1A"
                        BorderThickness="1"
                        CornerRadius="20"
                        Padding="20"
                        Margin="0,10,10,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Header + close -->
                            <RowDefinition Height="Auto"/>
                            <!-- item count -->
                            <RowDefinition Height="*"/>
                            <!-- list -->
                            <RowDefinition Height="Auto"/>
                            <!-- totals -->
                            <RowDefinition Height="Auto"/>
                            <!-- buttons -->
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="Your Cart"
                                   FontSize="22"
                                   FontWeight="Bold"/>
                            </StackPanel>

                            <Button Grid.Column="1"
                                    Content="X"
                                    FontSize="24"
                                    Width="28"
                                    Height="28"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Margin="0,0,0,0"
                                    Padding="0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontWeight="SemiBold"
                                    Click="CartCloseButton_Click"/>
                        </Grid>

                        <!-- Item count -->
                        <TextBlock x:Name="CartItemCountText"
                                   Grid.Row="1"
                                   Margin="0,8,0,8"
                                   FontSize="16"
                                   Foreground="#444"/>

                        <!-- Items list -->
                        <ScrollViewer Grid.Row="2"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                            <ItemsControl x:Name="CartItemsControl"
                                  ItemsSource="{Binding CartItems}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="0,4,0,4"
                                        CornerRadius="20"
                                        BorderBrush="#1A1A1A"
                                        BorderThickness="1"
                                        Background="White"
                                        Padding="12">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Name and quantity controls -->
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock Text="{Binding Name}"
                                                       FontSize="16"
                                                       FontWeight="Bold"
                                                       Margin="0,0,0,8"/>

                                                    <StackPanel Orientation="Horizontal"
                                                                VerticalAlignment="Center">

                                                        <Button Style="{StaticResource CartQuantityButtonStyle}"
                                                                Content="-"
                                                                Click="CartDecreaseQuantity_Click"/>

                                                        <TextBlock Text="{Binding Quantity}"
                                                                   FontSize="16"
                                                                   FontWeight="Bold"
                                                                   VerticalAlignment="Center"
                                                                   Margin="14,0"/>

                                                        <Button Style="{StaticResource CartQuantityButtonStyle}"
                                                                Content="+"
                                                                Click="CartIncreaseQuantity_Click"/>

                                                    </StackPanel>

                                                </StackPanel>

                                                <!-- Line price -->
                                                <TextBlock Grid.Column="1"
                                                   Text="{Binding LineTotal, StringFormat=$ {0:0.00}}"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   VerticalAlignment="Center"
                                                   Margin="12,0"/>

                                                <!-- Remove button -->
                                                <Button Grid.Column="2"
                                                Content="🗑"
                                                Width="32"
                                                Height="32"
                                                Margin="8,0,0,0"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                FontSize="18"
                                                Click="CartRemove_Click" />
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- Totals -->
                        <Border Grid.Row="3"
                                BorderBrush="#1A1A1A"
                                BorderThickness="0,1,0,0"
                                Margin="-20,0,-20,6"/>
                        
                        <StackPanel Grid.Row="3"
                            Margin="0,10,0,10">
                            <Grid Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Subtotal"
                                   FontSize="16"
                                   FontWeight="Bold"/>
                                <TextBlock x:Name="CartSubtotalText"
                                   Grid.Column="1"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Text="$ 0.00"/>
                            </Grid>

                            <Grid Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Tax (8%)"
                                   FontSize="16"
                                   FontWeight="Bold"/>
                                <TextBlock x:Name="CartTaxText"
                                   Grid.Column="1"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Text="$ 0.00"/>
                            </Grid>

                            <Border BorderBrush="#1A1A1A"
                            BorderThickness="0,1,0,0"
                            Margin="-20,6,-20,6"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Total"
                                   FontSize="16"
                                   FontWeight="Bold"/>
                                <TextBlock x:Name="CartTotalText"
                                   Grid.Column="1"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="#E64500"
                                   Text="$ 0.00"/>
                            </Grid>
                        </StackPanel>

                        <!-- Buttons -->
                        <StackPanel Grid.Row="4"
                            Margin="0,4,0,0">
                            <!-- Proceed to checkout -->
                            <Button x:Name="CheckoutButton"
                            Height="44"
                            Margin="0,0,0,8"
                            Content="Proceed to checkout"
                            Click="CheckoutButton_Click"
                            Background="{StaticResource AccentRed}"
                            Foreground="White"
                            FontSize="18"
                            FontWeight="Bold"
                            BorderThickness="0"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                        CornerRadius="22">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <!-- Clear cart -->
                            <Button x:Name="ClearCartButton"
                            Height="44"
                            Content="Clear Cart"
                            Click="ClearCartButton_Click"
                            Background="White"
                            BorderBrush="#1A1A1A"
                            BorderThickness="1"
                            FontSize="18"
                            FontWeight="Bold"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="22">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>