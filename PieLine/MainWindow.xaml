<Window x:Class="PieLine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Mom's and Pop's Pizzeria" Height="768" Width="1024"
        Background="#F5E6D3"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Information (Add logo later) -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,40,0,0">
            <TextBlock Text="Mom's and Pop's Pizzeria" 
                       FontSize="42" FontWeight="Bold"
                       Foreground="#1A1A1A"/>
        </StackPanel>

        <!-- Container for login form -->
        <Border Grid.Row="1" 
                Width="600" MaxHeight="650"
                Background="White"
                BorderBrush="#2C2C2C" BorderThickness="2"
                CornerRadius="15"
                Padding="50"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <Label>
                Login / Signup
            </Label>
        </Border>
    </Grid>
</Window>
