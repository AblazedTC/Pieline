<Window x:Class="PieLine.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PieLine"
        Title="Mom's and Pop's Pizzeria"
        Height="800" Width="1024"
        Background="#FFF7EE"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <SolidColorBrush x:Key="AccentRed" Color="#F13300"/>
        <SolidColorBrush x:Key="AccentGold" Color="#D4AF37"/>
        <SolidColorBrush x:Key="CardBackground" Color="White"/>
        <SolidColorBrush x:Key="HeaderBackground" Color="White"/>

        <!-- Text Box -->
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#1A1A1A"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                VerticalAlignment="Center"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Header Icon Buttons (info/home/account) -->
        <Style x:Key="HeaderIconStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="Transparent" Padding="4">
                            <Border x:Name="IconBorder"
                                    Width="28" Height="28"
                                    Background="Black">
                                <Border.OpacityMask>
                                    <ImageBrush ImageSource="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"/>
                                </Border.OpacityMask>
                            </Border>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="IconBorder"
                                        Property="Background"
                                        Value="{StaticResource AccentRed}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="IconBorder"
                                        Property="Background"
                                        Value="{StaticResource AccentGold}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Choice Button (Pickup/Delivery, Cash/Card) -->
        <Style x:Key="ChoiceButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="20,10"/>
            <Setter Property="Padding" Value="40,10"/>
            <Setter Property="Width" Value="220"/>
            <Setter Property="MinHeight" Value="48"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentRed}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="25">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Tag" Value="Selected">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="{StaticResource AccentRed}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="border"
                                        Property="BorderBrush"
                                        Value="{StaticResource AccentRed}"/>
                            </Trigger>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="{StaticResource AccentGold}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="border"
                                        Property="BorderBrush"
                                        Value="{StaticResource AccentGold}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,32,0,40"/>
            <Setter Property="Padding" Value="40,10"/>
            <Setter Property="Width" Value="280"/>
            <Setter Property="MinHeight" Value="48"/>
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource AccentRed}"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentGold}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#777777"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Step Buttons (1. Payment / 2. Review) -->
        <Style x:Key="StepButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="Padding" Value="18,4"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="21">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentGold}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentGold}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Error Bar -->
        <Style x:Key="ErrorBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFB3B3"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>


        <local:ImagePathConverter x:Key="ImagePathConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{StaticResource HeaderBackground}"
                Padding="0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Logo + Name -->
                <Border Grid.Row="0"
                        Background="{StaticResource HeaderBackground}"
                        Padding="16,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">
                            <Border Width="40" Height="40" CornerRadius="4" Margin="0,0,12,0">
                                <Border.Background>
                                    <ImageBrush ImageSource="/Images/logo.png"
                                                Stretch="Uniform" />
                                </Border.Background>
                            </Border>

                            <TextBlock Text="Mom's and Pop's Pizzeria"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       Foreground="#1A1A1A"/>
                        </StackPanel>

                        <!-- Header Icon Buttons (info, home, account) -->
                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">
                            <ToggleButton x:Name="InfoButton"
                                          Style="{StaticResource HeaderIconStyle}"
                                          Tag="/Images/info.png"
                                          Click="InfoButton_Click"/>
                            <ToggleButton x:Name="HomeButton"
                                          Style="{StaticResource HeaderIconStyle}"
                                          Tag="/Images/home.png"
                                          Click="HomeButton_Click"/>
                            <ToggleButton x:Name="AccountButton"
                                          Style="{StaticResource HeaderIconStyle}"
                                          Tag="/Images/account.png"/>
                        </StackPanel>
                        
                        <!-- Step Buttons -->
                        <StackPanel Grid.Column="2"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    Margin="6,0,0,0">
                            <Button Content="1. Payment"
                                    Style="{StaticResource StepButtonStyle}"
                                    Background="{StaticResource AccentRed}"
                                    Foreground="White"
                                    BorderBrush="{StaticResource AccentRed}"/>
                            <Button Content="2. Review"
                                    Style="{StaticResource StepButtonStyle}"
                                    Background="White"
                                    BorderBrush="{StaticResource AccentRed}"
                                    Click="ProceedButton_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <Border Background="Black" Height="1" Margin="0,55,0,0"/>

        <!-- Main -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Main Box -->
                <Border Width="700"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Margin="0,40,0,0"
                        Background="{StaticResource CardBackground}"
                        CornerRadius="24"
                        BorderBrush="#222222"
                        BorderThickness="1.5">
                    <StackPanel Margin="40">

                        <!-- Delivery Method -->
                        <TextBlock Text="Would you like your order delivered?"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,24"/>

                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                            <Button x:Name="PickupButton"
                                    Style="{StaticResource ChoiceButtonStyle}"
                                    Content="Pickup"
                                    Click="PickupButton_Click"/>
                            <Button x:Name="DeliveryButton"
                                    Style="{StaticResource ChoiceButtonStyle}"
                                    Content="Delivery"
                                    Click="DeliveryButton_Click"/>
                        </StackPanel>

                        <!-- Delivery Address -->
                        <StackPanel x:Name="DeliveryAddressPanel"
                                    Margin="0,24,0,0"
                                    Visibility="Collapsed">
                            <TextBlock Text="Delivery Address"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>

                            <Grid Margin="0,0,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                    <TextBlock Text="Street" FontSize="18" FontWeight="Bold" Margin="0,0,0,2"/>
                                    <TextBox x:Name="StreetTextBox"
                                             Style="{StaticResource TextBoxStyle}"
                                             TextChanged="AnyField_TextChanged"
                                             PreviewTextInput="StreetTextBox_PreviewTextInput"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                    <TextBlock Text="City" FontSize="18" FontWeight="Bold" Margin="0,0,0,2"/>
                                    <TextBox x:Name="CityTextBox"
                                             Style="{StaticResource TextBoxStyle}"
                                             TextChanged="AnyField_TextChanged"
                                             PreviewTextInput="LettersSpaceTextBox_PreviewTextInput"/>
                                </StackPanel>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                    <TextBlock Text="State" FontSize="18" FontWeight="Bold" Margin="0,0,0,2"/>
                                    <TextBox x:Name="StateTextBox"
                                             Style="{StaticResource TextBoxStyle}"
                                             TextChanged="AnyField_TextChanged"
                                             PreviewTextInput="LettersSpaceTextBox_PreviewTextInput"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                    <TextBlock Text="ZIP" FontSize="18" FontWeight="Bold" Margin="0,0,0,2"/>
                                    <TextBox x:Name="ZipTextBox"
                                             Style="{StaticResource TextBoxStyle}"
                                             MaxLength="5"
                                             PreviewTextInput="NumbersTextBox_PreviewTextInput"
                                             TextChanged="AnyField_TextChanged"
                                             PreviewKeyDown="BlockSpaceCharacter_PreviewKeyDown"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <!-- Payment Method -->
                        <TextBlock Text="Payment Method"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Margin="0,28,0,8"/>

                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                            <Button x:Name="CashButton"
                                    Style="{StaticResource ChoiceButtonStyle}"
                                    Content="Cash"
                                    Click="CashButton_Click"/>
                            <Button x:Name="CardButton"
                                    Style="{StaticResource ChoiceButtonStyle}"
                                    Content="Credit/Debit Card"
                                    Click="CardButton_Click"/>
                        </StackPanel>

                        <!-- Card Information -->
                        <StackPanel x:Name="CardInfoPanel"
                                    Margin="0,20,0,0"
                                    Visibility="Collapsed">
                            <TextBlock Text="Card Information"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>

                            <Grid Margin="0,0,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                    <TextBlock Text="Cardholder Name" FontSize="18" FontWeight="Bold" Margin="0,0,0,2"/>
                                    <TextBox x:Name="CardholderNameTextBox"
                                             Style="{StaticResource TextBoxStyle}"
                                             TextChanged="AnyField_TextChanged"
                                             PreviewTextInput="LettersSpaceTextBox_PreviewTextInput"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                    <TextBlock Text="Card Number" FontSize="18" FontWeight="Bold" Margin="0,0,0,2"/>
                                    <TextBox x:Name="CardNumberTextBox"
                                             Style="{StaticResource TextBoxStyle}"
                                             TextChanged="AnyField_TextChanged"
                                             MaxLength="19"
                                             PreviewTextInput="CardNumberTextBox_PreviewTextInput"
                                             PreviewKeyDown="BlockSpaceCharacter_PreviewKeyDown"/>
                                </StackPanel>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                    <TextBlock Text="Expiry Date" FontSize="18" FontWeight="Bold" Margin="0,0,0,2"/>
                                    <TextBox x:Name="ExpiryDateTextBox"
                                             Style="{StaticResource TextBoxStyle}"
                                             TextChanged="AnyField_TextChanged"
                                             MaxLength="5"
                                             PreviewTextInput="ExpiryTextBox_PreviewTextInput"
                                             PreviewKeyDown="BlockSpaceCharacter_PreviewKeyDown"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                    <TextBlock Text="Security Code" FontSize="18" FontWeight="Bold" Margin="0,0,0,2"/>
                                    <TextBox x:Name="SecurityCodeTextBox"
                                             Style="{StaticResource TextBoxStyle}"
                                             TextChanged="AnyField_TextChanged"
                                             MaxLength="3"
                                             PreviewTextInput="NumbersTextBox_PreviewTextInput"
                                             PreviewKeyDown="BlockSpaceCharacter_PreviewKeyDown"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                    </StackPanel>
                </Border>

                <!-- Error Bar -->
                <Border x:Name="ErrorBorder"
                        Background="#FFB3B3"
                        BorderBrush="#F13300"
                        BorderThickness="2"
                        CornerRadius="10"
                        Padding="10"
                        Margin="0,30,0,0"
                        Visibility="Collapsed"
                        HorizontalAlignment="Center"
                        Width="700">
                    <TextBlock x:Name="ErrorTextBlock"
                               FontSize="18"
                               FontWeight="Bold"
                               TextAlignment="Center"
                               Foreground="#1A1A1A"
                               TextWrapping="Wrap"/>
                </Border>

                <!-- Proceed Button -->
                <Button x:Name="ProceedButton"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Content="Proceed to order summary"
                        IsEnabled="False"
                        Click="ProceedButton_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
