<Window x:Class="PieLine.OrderPlacedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PieLine"
        Title="Mom's and Pop's Pizzeria"
        Height="800" Width="1024"
        Background="#FFF7EE"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <SolidColorBrush x:Key="AccentRed"  Color="#F13300"/>
        <SolidColorBrush x:Key="AccentGold" Color="#D4AF37"/>

        <!-- Header Buttons -->
        <Style x:Key="HeaderIconToggleStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="Transparent" Padding="4">
                            <Border x:Name="IconBorder"
                                    Width="28" Height="28"
                                    Background="Black">
                                <Border.OpacityMask>
                                    <ImageBrush ImageSource="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"/>
                                </Border.OpacityMask>
                            </Border>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="IconBorder"
                                        Property="Background"
                                        Value="{StaticResource AccentRed}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="IconBorder"
                                        Property="Background"
                                        Value="{StaticResource AccentGold}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Buttons -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="360"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="Background" Value="{StaticResource AccentRed}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="24">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="{StaticResource AccentGold}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <local:ImagePathConverter x:Key="ImagePathConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="White"
                Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo + Name -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="40" Height="40" CornerRadius="4" Margin="0,0,12,0">
                        <Border.Background>
                            <ImageBrush ImageSource="{Binding LogoPath, Converter={StaticResource ImagePathConverter}}"
                                        Stretch="Uniform" />
                        </Border.Background>
                    </Border>

                    <TextBlock Text="Mom's and Pop's Pizzeria"
                               FontSize="24"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Foreground="#1A1A1A"/>
                </StackPanel>

                <!-- Header Icons -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <ToggleButton x:Name="InfoButton"
                                  Style="{StaticResource HeaderIconToggleStyle}"
                                  Tag="/Images/info.png"
                                  Click="InfoButton_Click"/>
                    <ToggleButton x:Name="HomeButton"
                                  Style="{StaticResource HeaderIconToggleStyle}"
                                  Tag="/Images/home.png"
                                  Click="HomeButton_Click"/>
                    <ToggleButton x:Name="AccountButton"
                                  Style="{StaticResource HeaderIconToggleStyle}"
                                  Tag="/Images/account.png"
                                  Click="AccountButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="Black" Height="1"/>

        <!-- Main -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Margin="0,60,0,0">

                <!-- Check Image -->
                <Border Width="500"
                        Background="White"
                        CornerRadius="24"
                        BorderBrush="#1A1A1A"
                        BorderThickness="1.5"
                        Padding="30"
                        Margin="0,0,0,30">
                    <StackPanel>
                        <TextBlock Text="Your Order Has Been Placed!"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20"/>
                        <Image Source="/Images/checkmark.png"
                               Height="220"
                               Stretch="Uniform"
                               HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Buttons -->
                <Button Style="{StaticResource PrimaryButtonStyle}"
                        Content="View Receipt"
                        Click="ViewReceipt_Click"/>

                <Button Style="{StaticResource PrimaryButtonStyle}"
                        Content="Logout"
                        Click="Logout_Click"/>

                <Button Style="{StaticResource PrimaryButtonStyle}"
                        Content="About Us"
                        Click="AboutUs_Click"/>

                <Button Style="{StaticResource PrimaryButtonStyle}"
                        Content="Return To Menu"
                        Click="ReturnToMenu_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
