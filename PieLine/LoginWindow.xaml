<Window x:Class="PieLine.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Mom's and Pop's Pizzeria" Height="768" Width="1024"
        Background="#F5E6D3"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,40,0,0">
            <TextBlock Text="Mom's and Pop's Pizzeria" 
                       FontSize="42" FontWeight="Bold"
                       Foreground="#1A1A1A"/>
        </StackPanel>

        <Border Grid.Row="1" 
                Width="600" MaxHeight="650"
                Background="White"
                BorderBrush="#2C2C2C" BorderThickness="2"
                CornerRadius="15"
                Padding="50"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Title -->
                    <RowDefinition Height="Auto"/>
                    <!-- Phone -->
                    <RowDefinition Height="Auto"/>
                    <!-- Password -->
                    <RowDefinition Height="Auto"/>
                    <!-- Forgot password -->
                    <RowDefinition Height="Auto"/>
                    <!-- Error -->
                    <RowDefinition Height="Auto"/>
                    <!-- Login button -->
                    <RowDefinition Height="*"/>
                    <!-- Sign up link -->
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.ColumnSpan="2"
           Content="Welcome Back"
           FontSize="26"
           FontWeight="Bold"
           HorizontalAlignment="Left"
           Margin="0,0,0,10"/>

                <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
               Text="Enter your credentials to access your account"
               Margin="0,35,0,30"
               FontSize="14"
               Foreground="#555"/>

                <!-- Phone number -->
                <TextBlock Grid.Row="1" Grid.Column="0"
               Text="Phone Number"
               VerticalAlignment="Center"
               Margin="0,0,10,10"
               FontSize="16"/>
                <TextBox x:Name="PhoneTextBox"
             Grid.Row="1" Grid.Column="1"
             Margin="0,0,0,10"
             MinWidth="250"
             Height="30"
             Padding="5"
             MaxLength="20"
             TextChanged="PhoneTextBox_TextChanged"/>
             

                <!-- Password -->
                <TextBlock Grid.Row="2" Grid.Column="0"
               Text="Password"
               VerticalAlignment="Center"
               Margin="0,0,10,10"
               FontSize="16"/>
                <PasswordBox x:Name="PasswordBox"
                 Grid.Row="2" Grid.Column="1"
                 Margin="0,0,0,10"
                 Height="30"
                 Padding="5"/>

                <!-- Forgot password -->
                <TextBlock Grid.Row="3" Grid.ColumnSpan="2"
               HorizontalAlignment="Right"
               Margin="0,0,0,10"
               FontSize="14">
        <Hyperlink Click="ForgotPassword_Click">
            Forgot password?
        </Hyperlink>
                </TextBlock>

                <!-- Error message area -->
                <TextBlock x:Name="LoginErrorTextBlock"
               Grid.Row="4" Grid.ColumnSpan="2"
               Margin="0,0,0,10"
               Padding="10"
               Background="#FDE2E2"
               Foreground="#B00020"
               TextWrapping="Wrap"
               FontSize="14"
               Visibility="Collapsed"
               TextAlignment="Center"/>

                <!-- Sign in button -->
                <Button x:Name="LoginButton"
            Grid.Row="5" Grid.ColumnSpan="2"
            Content="Sign in"
            Height="40"
            Margin="0,0,0,10"
            HorizontalAlignment="Stretch"
            Click="LoginButton_Click"
            Background="#FF4A1E"
            Foreground="White"
            FontWeight="Bold"
            BorderBrush="#FF4A1E"/>

                <!-- Sign up link -->
                <StackPanel Grid.Row="6" Grid.ColumnSpan="2"
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0,20,0,0">
                    <TextBlock FontSize="14" Text="Don’t have an account? "/>
                    <TextBlock FontSize="14">
            <Hyperlink Click="Register_Click">
                Sign up
            </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>