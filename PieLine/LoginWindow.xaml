<Window x:Class="PieLine.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PieLine"
        Title="Mom's and Pop's Pizzeria"
        Height="800" Width="1024"
        Background="#FFF7EE"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        
        <!-- Accent color for buttons/links -->
        <SolidColorBrush x:Key="AccentRed" Color="#F13300"/>
        <SolidColorBrush x:Key="AccentGold" Color="#D4AF37"/>

        <!-- Rounded TextBox style -->
        <Style x:Key="RoundedTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#1A1A1A"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Rounded PasswordBox style -->
        <Style x:Key="RoundedPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#1A1A1A"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Rounded error bar style -->
        <Style x:Key="ErrorBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFB3B3"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Primary rounded button style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="44"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource AccentRed}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentGold}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource AccentGold}"/>
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#777777"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Hyperlinks -->
        <Style TargetType="Hyperlink">
            <Setter Property="Foreground" Value="{StaticResource AccentRed}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource AccentGold}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <local:ImagePathConverter x:Key="ImagePathConverter"/>
        
    </Window.Resources>

    <!-- Layout -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,100">
                
                <!-- Header -->
                <StackPanel Grid.Row="0"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,50,0,15">

                    <Border Width="50" Height="50" CornerRadius="4" Margin="0,0,12,0">
                        <Border.Background>
                            <ImageBrush ImageSource="{Binding LogoPath, Converter={StaticResource ImagePathConverter}}"
                                        Stretch="Uniform" />
                        </Border.Background>
                    </Border>

                    <TextBlock Text="Mom's and Pop's Pizzeria"
                               FontSize="42"
                               FontWeight="Bold"
                               Foreground="#1A1A1A"/>
                </StackPanel>

                <!-- Center card -->
                <Border Width="680"
                        Height="Auto"
                        Background="White"
                        BorderBrush="#1A1A1A"
                        BorderThickness="2"
                        CornerRadius="20"
                        Padding="100,24"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Titles -->
                            <RowDefinition Height="Auto"/>
                            <!-- Phone -->
                            <RowDefinition Height="Auto"/>
                            <!-- Password -->
                            <RowDefinition Height="Auto"/>
                            <!-- Forgot password -->
                            <RowDefinition Height="Auto"/>
                            <!-- Error -->
                            <RowDefinition Height="Auto"/>
                            <!-- Sign in -->
                            <RowDefinition Height="Auto"/>
                            <!-- Sign up -->
                        </Grid.RowDefinitions>

                        <!-- Welcome + subtitle -->
                        <StackPanel Grid.Row="0" Margin="0,-8,0,30">
                            <TextBlock Text="Welcome Back"
                                       FontSize="30"
                                       FontWeight="Bold"/>
                            <TextBlock Text="Enter your credentials to access your account"
                                       FontWeight="SemiBold"
                                       FontSize="18"/>
                        </StackPanel>

                        <!-- Phone field with label above -->
                        <StackPanel Grid.Row="1" Margin="0,0,0,18">
                            <TextBlock Text="Phone Number"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Margin="4,0,0,4"/>
                            <TextBox x:Name="PhoneTextBox"
                                     Style="{StaticResource RoundedTextBoxStyle}"
                                     MaxLength="14"
                                     TextChanged="PhoneTextBox_TextChanged"/>
                        </StackPanel>

                        <!-- Password field with label above -->
                        <StackPanel Grid.Row="2" Margin="0,0,0,4">
                            <TextBlock Text="Password"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Margin="4,0,0,4"/>
                            <PasswordBox x:Name="PasswordBox"
                                         MaxLength="32"
                                         Style="{StaticResource RoundedPasswordBoxStyle}"
                                         PasswordChanged="PasswordBox_PasswordChanged"/>
                        </StackPanel>

                        <!-- Forgot password -->
                        <TextBlock Grid.Row="3"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,0,10"
                                   FontSize="18">
                            <Hyperlink Click="ForgotPassword_Click">
                                Forgot password?
                            </Hyperlink>
                        </TextBlock>

                        <!-- Error bar -->
                        <StackPanel Grid.Row="4" Margin="0,12,0,8">
                            <Border x:Name="LoginErrorBorder"
                                    Style="{StaticResource ErrorBorderStyle}"
                                    Visibility="Collapsed"
                                    BorderBrush="#F13300"
                                    BorderThickness="2">
                                <TextBlock x:Name="LoginErrorTextBlock"
                                        FontSize="18"
                                        FontWeight="Bold"
                                        TextWrapping="Wrap"
                                        TextAlignment="Center"
                                        Foreground="#1A1A1A"/>
                            </Border>
                        </StackPanel>

                        <!-- Sign in button -->
                        <Button x:Name="LoginButton"
                                Grid.Row="5"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Content="Sign in"
                                IsEnabled="False"
                                Click="LoginButton_Click"/>

                        <!-- Sign up link -->
                        <StackPanel Grid.Row="6"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Bottom"
                                    Margin="0,20,0,0">
                            <TextBlock FontSize="18"
                                       Text="Don’t have an account? "/>
                            <TextBlock FontSize="18">
                                <Hyperlink Click="Register_Click">
                                    Sign up
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
