<Window x:Class="PieLine.PasswordResetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Password Reset - Mom's and Pop's Pizzeria"
        Height="768" Width="1024"
        Background="#F5E6D3"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,40,0,0">
            <TextBlock Text="Mom's and Pop's Pizzeria"
                       FontSize="42" FontWeight="Bold"
                       Foreground="#1A1A1A"/>
        </StackPanel>

        <!-- Card -->
        <Border Grid.Row="1"
                Width="600" MaxHeight="650"
                Background="White"
                BorderBrush="#2C2C2C" BorderThickness="2"
                CornerRadius="15"
                Padding="50"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Title -->
                    <RowDefinition Height="Auto"/>
                    <!-- Phone -->
                    <RowDefinition Height="Auto"/>
                    <!-- Email -->
                    <RowDefinition Height="Auto"/>
                    <!-- Password -->
                    <RowDefinition Height="Auto"/>
                    <!-- Confirm -->
                    <RowDefinition Height="Auto"/>
                    <!-- Error -->
                    <RowDefinition Height="Auto"/>
                    <!-- Button -->
                    <RowDefinition Height="*"/>
                    <!-- Sign up link -->
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.ColumnSpan="2"
                       Content="Password Reset"
                       FontSize="26"
                       FontWeight="Bold"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,10"/>

                <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                           Text="Enter some details to your account to reset your password"
                           Margin="0,35,0,30"
                           FontSize="14"
                           Foreground="#555"/>

                <!-- Phone -->
                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="Phone Number"
                           Margin="0,0,10,10"
                           FontSize="16"
                           VerticalAlignment="Center"/>
                <TextBox x:Name="PhoneTextBox"
                         Grid.Row="1" Grid.Column="1"
                         Margin="0,0,0,10"
                         Height="30"
                         MinWidth="250"
                         MaxLength="20"
                         TextChanged="PhoneTextBox_TextChanged"/>

                <!-- Email -->
                <TextBlock Grid.Row="2" Grid.Column="0"
                           Text="Email"
                           Margin="0,0,10,10"
                           FontSize="16"
                           VerticalAlignment="Center"/>
                <TextBox x:Name="EmailTextBox"
                         Grid.Row="2" Grid.Column="1"
                         Margin="0,0,0,10"
                         Height="30"
                         MinWidth="250"/>

                <!-- New Password -->
                <TextBlock Grid.Row="3" Grid.Column="0"
                           Text="Password"
                           Margin="0,0,10,10"
                           FontSize="16"
                           VerticalAlignment="Center"/>
                <PasswordBox x:Name="PasswordBox"
                             Grid.Row="3" Grid.Column="1"
                             Margin="0,0,0,10"
                             Height="30"/>

                <!-- Confirm Password -->
                <TextBlock Grid.Row="4" Grid.Column="0"
                           Text="Confirm Password"
                           Margin="0,0,10,10"
                           FontSize="16"
                           VerticalAlignment="Center"/>
                <PasswordBox x:Name="ConfirmPasswordBox"
                             Grid.Row="4" Grid.Column="1"
                             Margin="0,0,0,10"
                             Height="30"/>

                <!-- Error area -->
                <TextBlock x:Name="ResetErrorTextBlock"
                           Grid.Row="5" Grid.ColumnSpan="2"
                           Margin="0,0,0,10"
                           Padding="10"
                           Background="#FDE2E2"
                           Foreground="#B00020"
                           TextWrapping="Wrap"
                           FontSize="14"
                           Visibility="Collapsed"
                           TextAlignment="Center"/>

                <!-- Reset button -->
                <Button x:Name="ResetButton"
                        Grid.Row="6" Grid.ColumnSpan="2"
                        Content="Reset password"
                        Height="40"
                        Margin="0,0,0,10"
                        HorizontalAlignment="Stretch"
                        Click="ResetButton_Click"
                        Background="#FF4A1E"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderBrush="#FF4A1E"/>

                <!-- Sign up link -->
                <StackPanel Grid.Row="7" Grid.ColumnSpan="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,20,0,0">
                    <TextBlock FontSize="14" Text="Don't have an account? "/>
                    <TextBlock FontSize="14">
                        <Hyperlink Click="SignUp_Click">
                            Sign up
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
