<Window x:Class="PieLine.PasswordResetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PieLine"
        Title="Mom's and Pop's Pizzeria"
        Height="800" Width="1024"
        Background="#FFF7EE"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        
        <!-- Accent -->
        <SolidColorBrush x:Key="AccentRed" Color="#F13300"/>

        <!-- Rounded TextBox -->
        <Style x:Key="RoundedTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#1A1A1A"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Rounded PasswordBox -->
        <Style x:Key="RoundedPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#1A1A1A"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Error Box -->
        <Style x:Key="ErrorBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFB3B3"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="BorderBrush" Value="#F13300"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <!-- Primary Button -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="44"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource AccentRed}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <local:ImagePathConverter x:Key="ImagePathConverter"/>

    </Window.Resources>


    <!-- Layout -->
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel HorizontalAlignment="Center" Margin="0,40,0,40">

            <!-- Header -->
            <StackPanel Grid.Row="0"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,0">
                
                <Border Width="50" Height="50" CornerRadius="4" Margin="0,0,12,12">
                    <Border.Background>
                        <ImageBrush ImageSource="{Binding LogoPath, Converter={StaticResource ImagePathConverter}}"
                                    Stretch="Uniform" />
                    </Border.Background>
                </Border>

                <TextBlock Text="Mom's and Pop's Pizzeria"
                           FontSize="42"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"
                           Foreground="#1A1A1A"/>

            </StackPanel>

            <!-- Card -->
            <Border Width="680"
                    Background="White"
                    BorderBrush="#1A1A1A"
                    BorderThickness="2"
                    CornerRadius="20"
                    Padding="100,24"
                    Margin="0,0,0,40"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Title -->
                        <RowDefinition Height="Auto"/>
                        <!-- Phone -->
                        <RowDefinition Height="Auto"/>
                        <!-- Email -->
                        <RowDefinition Height="Auto"/>
                        <!-- Password -->
                        <RowDefinition Height="Auto"/>
                        <!-- Confirm -->
                        <RowDefinition Height="Auto"/>
                        <!-- Error -->
                        <RowDefinition Height="Auto"/>
                        <!-- Button -->
                        <RowDefinition Height="Auto"/>
                        <!-- Link -->
                    </Grid.RowDefinitions>

                    <!-- Title -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,30">
                        <TextBlock Text="Password Reset"
                                   FontSize="30"
                                   FontWeight="Bold"/>
                        <TextBlock Text="Enter details to reset your password"
                                   FontSize="18"
                                   FontWeight="SemiBold"/>
                    </StackPanel>

                    <!-- Phone -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,18">
                        <TextBlock Text="Phone Number"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Margin="4,0,0,4"/>
                        <TextBox x:Name="PhoneTextBox"
                                 Style="{StaticResource RoundedTextBoxStyle}"
                                 MaxLength="14"
                                 TextChanged="PhoneTextBox_TextChanged"/>
                    </StackPanel>

                    <!-- Email -->
                    <StackPanel Grid.Row="2" Margin="0,0,0,18">
                        <TextBlock Text="Email"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Margin="4,0,0,4"/>
                        <TextBox x:Name="EmailTextBox"
                                 Style="{StaticResource RoundedTextBoxStyle}"
                                 MaxLength="32"/>
                    </StackPanel>

                    <!-- Password -->
                    <StackPanel Grid.Row="3" Margin="0,0,0,18">
                        <TextBlock Text="Password"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Margin="4,0,0,4"/>
                        <PasswordBox x:Name="PasswordBox"
                                     Style="{StaticResource RoundedPasswordBoxStyle}"
                                     MaxLength="32"/>
                    </StackPanel>

                    <!-- Confirm Password -->
                    <StackPanel Grid.Row="4" Margin="0,0,0,18">
                        <TextBlock Text="Confirm Password"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Margin="4,0,0,4"/>
                        <PasswordBox x:Name="ConfirmPasswordBox"
                                     Style="{StaticResource RoundedPasswordBoxStyle}"
                                     MaxLength="32"/>
                    </StackPanel>

                    <!-- Error -->
                    <StackPanel Grid.Row="5" Margin="0,10,0,0">
                        <Border x:Name="ResetErrorBorder"
                                Style="{StaticResource ErrorBorderStyle}"
                                Visibility="Collapsed"
                                BorderBrush="#F13300"
                                BorderThickness="2">
                            <TextBlock x:Name="ResetErrorTextBlock"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Foreground="#1A1A1A"/>
                        </Border>
                    </StackPanel>

                    <!-- Button -->
                    <Button Grid.Row="6"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Content="Reset password"
                            Click="ResetButton_Click"
                            Margin="0,15,0,0"/>

                    <!-- Link -->
                    <StackPanel Grid.Row="7"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,20,0,0">
                        <TextBlock FontSize="18"
                                   Text="Don't have an account? "/>
                        <TextBlock FontSize="18">
                            <Hyperlink Click="SignUp_Click"
                                       Foreground="{StaticResource AccentRed}">
                                Sign up
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Window>
