<Window x:Class="PieLine.ReviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PieLine"
        Title="Mom's and Pop's Pizzeria"
        Height="800" Width="1024"
        Background="#FFF7EE"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <SolidColorBrush x:Key="AccentRed" Color="#F13300"/>
        <SolidColorBrush x:Key="AccentGold" Color="#D4AF37"/>

        <!-- Step Buttons (1. Payment / 2. Review) -->
        <Style x:Key="StepButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="Padding" Value="18,4"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="21">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentGold}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentGold}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Header Buttons -->
        <Style x:Key="HeaderIconStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="Transparent" Padding="4">
                            <Border x:Name="IconBorder"
                                    Width="28" Height="28"
                                    Background="Black">
                                <Border.OpacityMask>
                                    <ImageBrush ImageSource="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"/>
                                </Border.OpacityMask>
                            </Border>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="IconBorder"
                                        Property="Background"
                                        Value="{StaticResource AccentRed}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="IconBorder"
                                        Property="Background"
                                        Value="{StaticResource AccentGold}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Hyperlinks -->
        <Style TargetType="Hyperlink">
            <Setter Property="Foreground" Value="{StaticResource AccentRed}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource AccentGold}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <local:ImagePathConverter x:Key="ImagePathConverter"/>
    </Window.Resources>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="White"
                Padding="16,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Logo + Name -->
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <Border Width="40" Height="40" CornerRadius="4" Margin="0,0,12,0">
                        <Border.Background>
                            <ImageBrush ImageSource="{Binding LogoPath, Converter={StaticResource ImagePathConverter}}"
                                        Stretch="Uniform" />
                        </Border.Background>
                    </Border>

                    <!-- Name -->
                    <TextBlock Text="Mom's and Pop's Pizzeria"
                               FontSize="24"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Foreground="#1A1A1A"/>
                </StackPanel>

                <!-- Header icons -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="16,0,5,0">
                    <!-- Info -->
                    <ToggleButton x:Name="InfoButton"
                                  Style="{StaticResource HeaderIconStyle}"
                                  Tag="/Images/info.png"
                                  Click="InfoButton_Click"/>
                    <!-- Home -->
                    <ToggleButton x:Name="HomeButton"
                                  Style="{StaticResource HeaderIconStyle}"
                                  Tag="/Images/home.png"
                                  Click="HomeButton_Click"/>
                    <!-- Account -->
                    <ToggleButton x:Name="AccountButton"
                                  Style="{StaticResource HeaderIconStyle}"
                                  Tag="/Images/account.png"/>
                </StackPanel>

                <!-- Step Buttons -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <Button Content="1. Payment"
                            Style="{StaticResource StepButtonStyle}"
                            Background="White"
                            BorderBrush="{StaticResource AccentRed}"
                            Click="BackToPayment_Click"/>
                    <Button Content="2. Review"
                            Style="{StaticResource StepButtonStyle}"
                            Background="{StaticResource AccentRed}"
                            BorderBrush="{StaticResource AccentRed}"
                            Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Background="Black" Height="1" Margin="0,55,0,0"/>

        <!-- Main -->
        <Grid Grid.Row="1" Margin="40,10,40,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Checkout"
                       FontSize="28"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Address + Payment -->
                <StackPanel Grid.Column="0"
                            Margin="0,0,20,0"
                            VerticalAlignment="Top">

                    <!-- Address -->
                    <Border Margin="0,0,0,20"
                            Background="White"
                            CornerRadius="16"
                            BorderBrush="#1A1A1A"
                            BorderThickness="1.5"
                            Padding="16">
                        <StackPanel>
                            <TextBlock x:Name="AddressTitleTextBlock"
                                       FontWeight="Bold"
                                       FontSize="16"
                                       Margin="0,0,0,8"/>
                            <TextBlock x:Name="AddressBodyTextBlock"
                                       FontSize="16"
                                       Margin="0,0,0,8"/>

                            <TextBlock FontSize="16" Margin="0,4,0,0">
                                <Hyperlink Click="EditAddress_Click">
                                    Edit Address
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Payment Method -->
                    <Border Background="White"
                            CornerRadius="16"
                            BorderBrush="#1A1A1A"
                            BorderThickness="1.5"
                            Padding="16">
                        <StackPanel>
                            <TextBlock Text="Payment Method"
                                       FontWeight="Bold"
                                       FontSize="16"
                                       Margin="0,0,0,8"/>
                            <TextBlock x:Name="PaymentSummaryTextBlock"
                                       FontSize="16"
                                       Margin="0,0,0,8"/>

                            <TextBlock FontSize="16" Margin="0,4,0,0">
                                <Hyperlink Click="EditPayment_Click">
                                    Edit Payment
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Order Summary -->
                <Border Grid.Column="1"
                        Background="White"
                        CornerRadius="16"
                        BorderBrush="#1A1A1A"
                        BorderThickness="1.5"
                        Padding="16"
                        VerticalAlignment="Top">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Order Summary"
                                   FontWeight="Bold"
                                   FontSize="16"
                                   Margin="0,0,0,8"/>

                        <!-- Items list -->
                        <ItemsControl x:Name="ItemsList"
                                      Grid.Row="1"
                                      Margin="0,4,0,8">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{Binding Name}" FontSize="16"/>
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Price, StringFormat={}{0:C2}}"
                                                   FontWeight="Bold"
                                                   FontSize="16"
                                                   HorizontalAlignment="Right" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Totals -->
                        <StackPanel Grid.Row="2">
                            <Border Background="Black" Height="1" Margin="-17,0,-17,5"/>

                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Subtotal" FontSize="16"/>
                                <TextBlock x:Name="SubtotalTextBlock"
                                           FontWeight="Bold"
                                           FontSize="16"
                                           Grid.Column="1"
                                           HorizontalAlignment="Right"/>
                            </Grid>

                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Tax (8%)" FontSize="16" />
                                <TextBlock x:Name="TaxTextBlock"
                                           FontWeight="Bold"
                                           FontSize="16"
                                           Grid.Column="1"
                                           HorizontalAlignment="Right"/>
                            </Grid>

                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Delivery Fee" FontSize="16"/>
                                <TextBlock x:Name="DeliveryFeeTextBlock"
                                           FontWeight="Bold"
                                           FontSize="16"
                                           Grid.Column="1"
                                           HorizontalAlignment="Right"/>
                            </Grid>

                            <Border Background="Black" Height="1" Margin="-17,6,-17,6"/>

                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Total" FontWeight="Bold" FontSize="16"/>
                                <TextBlock x:Name="TotalTextBlock"
                                           Grid.Column="1"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource AccentRed}"
                                           HorizontalAlignment="Right"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Place Order Button -->
        <Button Content="Place Order"
                Width="320"
                Grid.Row="2"
                Margin="0,-100,0,0"
                Height="44"
                HorizontalAlignment="Center"
                Background="{StaticResource AccentRed}"
                Foreground="White"
                FontWeight="SemiBold"
                FontSize="16"
                BorderBrush="{x:Null}"
                Cursor="Hand"
                Click="PlaceOrderButton_Click">

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                    Background="{TemplateBinding Background}"
                    CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border"
                            Property="Background"
                            Value="{StaticResource AccentGold}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>

        </Button>
    </Grid>
</Window>
