<Window x:Class="PieLine.ReviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mom's and Pop's Pizzeria - Review"
        Height="768" Width="1024"
        Background="#F5E6D3"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <SolidColorBrush x:Key="AccentRed" Color="#F13300"/>

        <!-- Gold / Red step buttons in top-right -->
        <Style x:Key="StepChipButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="Padding" Value="20,4"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="21">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header bar -->
        <Grid Grid.Row="0" Background="#F5E6D3" Height="56">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left: app title -->
            <TextBlock Text="Mom's and Pop's Pizzeria"
                       Margin="16,8"
                       VerticalAlignment="Center"
                       FontWeight="Bold"
                       FontSize="22"/>

            <!-- Right: step chips -->
            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="0,0,24,0">
                <!-- back to payment -->
                <Button Content="1. Payment"
                        Style="{StaticResource StepChipButtonStyle}"
                        Background="#C89B00"
                        Click="PaymentStepButton_Click"/>

                <!-- current step: review -->
                <Button Content="2. Review"
                        Style="{StaticResource StepChipButtonStyle}"
                        Background="#FF4B0A"
                        IsHitTestVisible="False"/>
            </StackPanel>
        </Grid>

        <!-- Main content -->
        <Grid Grid.Row="1" Margin="40,10,40,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Checkout"
                       FontSize="28"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <!-- 2-column layout: left (address+payment), right (order summary) -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- LEFT COLUMN: address + payment stacked -->
                <StackPanel Grid.Column="0"
                            Margin="0,0,20,0"
                            VerticalAlignment="Top">

                    <!-- Address card -->
                    <Border Margin="0,0,0,20"
                            Background="White"
                            CornerRadius="16"
                            BorderBrush="#DDDDDD"
                            BorderThickness="1.5"
                            Padding="16"
                            Height="Auto">
                        <StackPanel>
                            <TextBlock x:Name="AddressTitleTextBlock"
                                       FontWeight="Bold"
                                       FontSize="16"
                                       Margin="0,0,0,8"/>
                            <TextBlock x:Name="AddressBodyTextBlock"
                                       FontSize="16"
                                       Margin="0,0,0,8"/>
                            <!-- Always visible Edit Address -->
                            <TextBlock Text="Edit Address"
                                       x:Name="EditAddressLink"
                                       Foreground="#C0392B"
                                       FontSize="16"
                                       TextDecorations="Underline"
                                       Cursor="Hand"
                                       MouseLeftButtonUp="EditPayment_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Payment method card -->
                    <Border Background="White"
                            CornerRadius="16"
                            BorderBrush="#DDDDDD"
                            BorderThickness="1.5"
                            Padding="16"
                            Height="Auto">
                        <StackPanel>
                            <TextBlock Text="Payment Method"
                                       FontWeight="Bold"
                                       FontSize="16"
                                       Margin="0,0,0,8"/>
                            <TextBlock x:Name="PaymentSummaryTextBlock"
                                       FontSize="16"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Edit Payment"
                                       Foreground="#C0392B"
                                       FontSize="16"
                                       TextDecorations="Underline"
                                       Cursor="Hand"
                                       MouseLeftButtonUp="EditPayment_Click"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Order Summary -->
                <Border Grid.Column="1"
                        Background="White"
                        CornerRadius="16"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1.5"
                        Padding="16"
                        VerticalAlignment="Top">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Order Summary"
                                   FontWeight="Bold"
                                   FontSize="16"
                                   Margin="0,0,0,8"/>

                        <!-- Items list -->
                        <ItemsControl x:Name="ItemsList"
                                      Grid.Row="1"
                                      Margin="0,4,0,8">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{Binding Name}" FontSize="16"/>
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Price, StringFormat={}{0:C2}}"
                                                   FontWeight="Bold"
                                                   FontSize="16"
                                                   HorizontalAlignment="Right" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Totals -->
                        <StackPanel Grid.Row="2">
                            <Separator Margin="0,0,0,4"/>

                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Subtotal" FontSize="16"/>
                                <TextBlock x:Name="SubtotalTextBlock"
                                           FontWeight="Bold"
                                           FontSize="16"
                                           Grid.Column="1"
                                           HorizontalAlignment="Right"/>
                            </Grid>

                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Tax (8%)" FontSize="16" />
                                <TextBlock x:Name="TaxTextBlock"
                                           FontWeight="Bold"
                                           FontSize="16"
                                           Grid.Column="1"
                                           HorizontalAlignment="Right"/>
                            </Grid>

                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Delivery Fee" FontSize="16"/>
                                <TextBlock x:Name="DeliveryFeeTextBlock"
                                           FontWeight="Bold"
                                           FontSize="16"
                                           Grid.Column="1"
                                           HorizontalAlignment="Right"/>
                            </Grid>

                            <Separator Margin="0,8,0,4"/>

                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Total" FontWeight="Bold" FontSize="16"/>
                                <TextBlock x:Name="TotalTextBlock"
                                           Grid.Column="1"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource AccentRed}"
                                           HorizontalAlignment="Right"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Place Order button -->
        <Border Grid.Row="2" Background="#F5E6D3" Padding="0,0,0,16">
            <Button Content="Place Order"
                    Width="320"
                    Height="44"
                    HorizontalAlignment="Center"
                    Background="{StaticResource AccentRed}"
                    Foreground="White"
                    FontWeight="SemiBold"
                    FontSize="16"
                    BorderBrush="{x:Null}"
                    Cursor="Hand"
                    Click="PlaceOrderButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="22">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Border>
    </Grid>
</Window>
