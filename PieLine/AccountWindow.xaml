<Window x:Class="PieLine.AccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PieLine"
        Title="Mom's and Pop's Pizzeria - Account"
        Height="800"
        Width="1024"
        Background="#FFF7EE"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <SolidColorBrush x:Key="AccentRed" Color="#F13300"/>
        <SolidColorBrush x:Key="AccentGold" Color="#D4AF37"/>

        <!-- Text Box -->
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#1A1A1A"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Password Box -->
        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#1A1A1A"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Error Style (same as RegisterWindow) -->
        <Style x:Key="ErrorStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFB3B3"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Success Style (green) -->
        <Style x:Key="SuccessStyle" TargetType="Border">
            <Setter Property="Background" Value="#DFF2DF"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="BorderBrush" Value="#0F9A0F"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <!-- Primary Button -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="46"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource AccentRed}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentGold}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource AccentGold}"/>
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#777777"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Icon buttons -->
        <Style x:Key="HeaderIconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Header Icon Buttons (home/info/account/cart) -->
        <Style x:Key="HeaderIconToggleStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="Transparent" Padding="4">
                            <Border x:Name="IconBorder"
                                    Width="32" Height="32"
                                    Background="Black">
                                <Border.OpacityMask>
                                    <ImageBrush ImageSource="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"/>
                                </Border.OpacityMask>
                            </Border>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="IconBorder"
                                        Property="Background"
                                        Value="{StaticResource AccentRed}"/>
                            </Trigger>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="IconBorder"
                                        Property="Background"
                                        Value="{StaticResource AccentGold}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Text Input Style -->
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="#1A1A1A"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>



        <!-- Secondary Button Style (Outlined) -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource AccentRed}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentRed}"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFF5F5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <local:ImagePathConverter x:Key="ImagePathConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="White"
                Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo + Name -->
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <Border Width="40"
                            Height="40"
                            CornerRadius="4"
                            Margin="0,0,12,0">
                        <Border.Background>
                            <ImageBrush ImageSource="{Binding LogoPath, Converter={StaticResource ImagePathConverter}}"
                                        Stretch="Uniform"/>
                        </Border.Background>
                    </Border>

                    <TextBlock Text="Mom's and Pop's Pizzeria"
                               FontSize="24"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Foreground="#1A1A1A"/>
                </StackPanel>

                <!-- Right Icons -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    <ToggleButton x:Name="InfoButton"
                                  Style="{StaticResource HeaderIconToggleStyle}"
                                  Tag="/Images/info.png"
                                  Click="InfoButton_Click"/>
                    <ToggleButton x:Name="HomeButton"
                                  Style="{StaticResource HeaderIconToggleStyle}"
                                  Tag="/Images/home.png"
                                  Click="HomeButton_Click"/>
                    <ToggleButton x:Name="AccountButton"
                                  Style="{StaticResource HeaderIconToggleStyle}"
                                  Tag="/Images/account.png"
                                  IsChecked="True"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1"
                Background="Black"
                Height="1"/>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Account Information Section -->
                <Border Grid.Column="0"
                        Background="White"
                        CornerRadius="30"
                        BorderBrush="#1A1A1A"
                        BorderThickness="2"
                        Padding="40,30"
                        VerticalAlignment="Top">
                    <StackPanel>
                        <TextBlock Text="Account Information"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="#1A1A1A"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,30"/>

                        <!-- Full Name -->
                        <TextBlock Text="Full Name"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#1A1A1A"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="FullNameTextBox"
                                 Text="John Doe"
                                 Style="{StaticResource TextBoxStyle}"
                                 Width="280"
                                 HorizontalAlignment="Center"
                                 Margin="0,0,0,20"/>

                        <!-- Phone Number -->
                        <TextBlock Text="Phone Number"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#1A1A1A"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="PhoneNumberTextBox"
                                 Text="123-456-7890"
                                 Style="{StaticResource TextBoxStyle}"
                                 Width="280"
                                 HorizontalAlignment="Center"
                                 Margin="0,0,0,20"
                                 MaxLength="10"
                                 PreviewTextInput="PhoneNumberTextBox_PreviewTextInput"
                                 DataObject.Pasting="PhoneNumberTextBox_Pasting"/>

                        <!-- Email Address -->
                        <TextBlock Text="Email Address"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#1A1A1A"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="EmailTextBox"
                                 Text="johndoe@example.com"
                                 Style="{StaticResource TextBoxStyle}"
                                 Width="280"
                                 HorizontalAlignment="Center"
                                 Margin="0,0,0,20"/>

                        <!-- Password -->
                        <TextBlock Text="Password"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#1A1A1A"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,5"/>
                        <PasswordBox x:Name="PasswordBox"
                                     Password=""
                                     Style="{StaticResource PasswordBoxStyle}"
                                     Width="280"
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,30"/>

                        <!-- Instructions -->
                        <TextBlock Text="Update desired account information, then click Update Account."
                                   FontSize="14"
                                   Foreground="#555"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   HorizontalAlignment="Center"
                                   MaxWidth="300"
                                   Margin="0,0,0,30"/>

                        <!-- Logout Button -->
                        <Button Content="Logout"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Width="320"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,20"
                                Click="LogoutButton_Click"/>

                        <!-- Update Account Button -->
                        <Button Content="Update Account"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Width="320"
                                HorizontalAlignment="Center"
                                Click="UpdateAccountButton_Click"/>

                        <!-- Error Message Example (to be dynamically updated) -->
                        <!-- Define a default Border style for errors -->
                        <Border x:Name="ErrorBorder"
                                Style="{StaticResource ErrorStyle}"
                                Visibility="Collapsed">
                            <!-- Statically define a TextBlock for the error message -->
                            <TextBlock x:Name="ErrorMessageTextBlock"
                                       Text="Sample error message"
                                       Foreground="#9A0F0F"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"/>
                        </Border>

                        <!-- Account Update Error Message (collapsed by default) -->
                        <Border x:Name="AccountErrorBorder"
                                Style="{StaticResource ErrorStyle}"
                                Visibility="Collapsed"
                                Margin="0,16,0,0">
                            <TextBlock x:Name="AccountErrorTextBlock"
                                       Text="Error updating account. Please try again."
                                       Foreground="#9A0F0F"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       MaxWidth="320"/>
                        </Border>

                        <!-- Account Update Success Message (collapsed by default) -->
                        <Border x:Name="AccountSuccessBorder"
                                Style="{StaticResource SuccessStyle}"
                                Visibility="Collapsed"
                                Margin="0,8,0,0">
                            <TextBlock x:Name="AccountSuccessTextBlock"
                                       Text="Account successfully updated"
                                       Foreground="#0F9A0F"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       MaxWidth="320"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Order History Section -->
                <Border Grid.Column="2"
                        Background="White"
                        CornerRadius="30"
                        BorderBrush="#1A1A1A"
                        BorderThickness="2"
                        Padding="40,30"
                        VerticalAlignment="Top">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0">
                            <TextBlock Text="Order History"
                                       FontSize="32"
                                       FontWeight="Bold"
                                       Foreground="#1A1A1A"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="Select an order to view the receipt"
                                       FontSize="14"
                                       Foreground="#555"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,30"/>
                        </StackPanel>

                        <!-- Order List: selectable -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                            <Grid>
                                <ListBox x:Name="OrdersListBox"
                 SelectionChanged="OrdersListBox_SelectionChanged"
                 BorderThickness="0"
                 Background="Transparent"
                 HorizontalContentAlignment="Stretch"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                                    <!-- Container style controls the card look and selected state -->
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="Padding" Value="0"/>
                                            <Setter Property="Margin" Value="0,0,0,15"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                            <Setter Property="Foreground" Value="#1A1A1A"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ListBoxItem">
                                                        <Border x:Name="ItemBorder"
                                        Background="White"
                                        BorderBrush="#1A1A1A"
                                        BorderThickness="2"
                                        CornerRadius="15"
                                        Padding="15"
                                        SnapsToDevicePixels="True"
                                        MinHeight="110">
                                                            <ContentPresenter/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource AccentGold}"/>
                                                            </Trigger>
                                                            <Trigger Property="IsSelected" Value="True">
                                                                <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource AccentRed}"/>
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ListBox.ItemContainerStyle>

                                    <ListBox.ItemTemplate>
                                        <DataTemplate DataType="{x:Type local:OrderRecord}">
                                            <!-- Grid layout keeps items and totals from overlapping -->
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Row 0: Order Number and Item Count -->
                                                <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="{Binding OrderId, StringFormat='Order Number: {0}'}"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   TextTrimming="CharacterEllipsis"
                                   Margin="0,0,10,0"/>

                                                <TextBlock Grid.Row="0" Grid.Column="1"
                                   Text="{Binding Items.Count, StringFormat='Item Amount: {0}'}"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Right"/>

                                                <!-- Row 1: Order Date -->
                                                <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                   Text="{Binding OrderDate, StringFormat='Ordered: {0:MM/dd/yyyy}'}"
                                   FontSize="14"
                                   Margin="0,8,0,0"/>

                                                <!-- Row 2: Spacer -->
                                                <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Height="8"/>

                                                <!-- Row 3: Payment and Total -->
                                                <TextBlock Grid.Row="3" Grid.Column="0"
                                   Text="{Binding PaymentSummary, StringFormat='Payment: {0}'}"
                                   FontSize="14"
                                   TextTrimming="CharacterEllipsis"
                                   Margin="0,0,10,0"
                                   VerticalAlignment="Center"/>

                                                <TextBlock Grid.Row="3" Grid.Column="1"
                                   Text="{Binding Total, StringFormat='Total: ${0:F2}'}"
                                   FontSize="15"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>

                                <TextBlock x:Name="NoOrdersTextBlock" 
                   Text="No orders found. Place an order to see it here."
                   FontSize="14" 
                   Foreground="#555" 
                   HorizontalAlignment="Center" 
                   Visibility="Collapsed" />
                            </Grid>
                        </ScrollViewer>
                        <!-- View Receipt Button -->
                        <Button Grid.Row="2"
                                x:Name="ViewReceiptButton"
                                Content="View Receipt"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Width="320"
                                HorizontalAlignment="Center"
                                Margin="0,20,0,0"
                                Click="ViewReceiptButton_Click"
                                IsEnabled="False"/>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>