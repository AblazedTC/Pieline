<Application x:Class="PieLine.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PieLine"
             StartupUri="LoginWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="ScrollBarGold" Color="#D4AF37"/>
        <SolidColorBrush x:Key="ScrollBarGoldHover" Color="#F0C75E"/>
        <SolidColorBrush x:Key="ScrollBarGoldPressed" Color="#B8941F"/>
        <SolidColorBrush x:Key="ScrollBarTrack" Color="Transparent"/>

        <Style x:Key="ScrollBarThumbStyle" TargetType="{x:Type Thumb}">
            <Setter Property="Background" Value="{StaticResource ScrollBarGold}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Margin="2">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="1" 
                                                  BlurRadius="3" 
                                                  Opacity="0.3" 
                                                  Color="#000000"/>
                            </Border.Effect>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource ScrollBarGoldHover}"/>
                </Trigger>
                <Trigger Property="IsDragging" Value="True">
                    <Setter Property="Background" Value="{StaticResource ScrollBarGoldPressed}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CustomScrollBarStyle" TargetType="{x:Type ScrollBar}">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Background" Value="{StaticResource ScrollBarTrack}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="6"
                                    Margin="2"/>
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource ScrollBarThumbStyle}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type ScrollViewer}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollViewer}">
                        <Grid>
                            <ScrollContentPresenter x:Name="PART_ScrollContentPresenter"
                                                    Margin="0,0,0,0" />

                            <ScrollBar x:Name="PART_VerticalScrollBar"
                                       Orientation="Vertical"
                                       Style="{StaticResource CustomScrollBarStyle}"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Stretch"
                                       Width="12"
                                       Maximum="{TemplateBinding ScrollableHeight}"
                                       ViewportSize="{TemplateBinding ViewportHeight}"
                                       Value="{TemplateBinding VerticalOffset}"
                                       Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>